    .form3-table {
        font-size: 1rem;
        table-layout: fixed; /* Enable fixed column widths */
    }
    
    /* Narrow columns for Teacher and Period */
    .form3-table .teacher-col {
        width: 10%;
        min-width: 100px;
    }
    
    .form3-table .period-col {
        width: 5%;
        min-width: 50px;
    }
    
