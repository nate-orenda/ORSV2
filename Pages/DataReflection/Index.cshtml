@page
@model ORSV2.Pages.DataReflection.IndexModel
@{
    ViewData["Title"] = "Data Reflection";
}

@await Html.PartialAsync("_Breadcrumbs", Model.Breadcrumbs)

@if (Model.DistrictBlocks == null || Model.DistrictBlocks.Count == 0)
{
    <div class="orenda-card">
        <div class="orenda-card-body text-muted">
            No Data Reflection districts available for your scope.
        </div>
    </div>
}
else
{
    <h2 class="mb-4">Select a District</h2>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var b in Model.DistrictBlocks.OrderBy(x => x.DistrictName))
        {
            <div class="col">
                <!-- Minimal GA-style card: header only, entire card is the link -->
                <a class="text-decoration-none text-dark"
                   asp-page="/DataReflection/Forms"
                   asp-route-districtId="@b.DistrictId"
                   aria-label="Open @b.DistrictName Data Reflection">
                    <div class="card h-100 shadow-sm border-0 rounded-3 bg-white hover-shadow">
                        <div class="card-body border-start border-5 border-primary">
                            <h5 class="card-title">@b.DistrictName</h5>
                            <p class="card-text text-muted">District Forms</p>
                        </div>
                    @* Intentionally no body/footer for the minimalist look *@
                    </div>
                </a>
            </div>
        }
    </div>
}
