    ViewData["Title"] = "Meta Assessment Data - DRS";

    // === UPDATED: Helper functions rewritten with robust lambda syntax ===
    Func<ORSV2.Pages.DataReflection.AggData, string, Microsoft.AspNetCore.Html.IHtmlContent> RenderProfCell = 
        (demoData, cssClass) => new Microsoft.AspNetCore.Mvc.Razor.HelperResult(async writer => 
        {
            var dataClass = $"data-{cssClass}";
            if (demoData != null && demoData.TotalTested > 0)
            {
                await writer.WriteAsync($"<td class=\"{dataClass} prof-cell\">");
                await writer.WriteAsync($"<span class=\"proficiency-badge proficiency-neutral\">{demoData.PctProficient}%</span>");
                await writer.WriteAsync($"<span class=\"combined-count\">({demoData.TotalProficient} / {demoData.TotalTested})</span>");
                await writer.WriteAsync("</td>");
            }
            else
            {
                await writer.WriteAsync($"<td class=\"{dataClass} prof-cell\">—</td>");
            }
        });

    Func<ORSV2.Pages.DataReflection.AggData, decimal?, string, Microsoft.AspNetCore.Html.IHtmlContent> RenderDiffCell = 
        (demoData, target, cssClass) => new Microsoft.AspNetCore.Mvc.Razor.HelperResult(async writer => 
        {
            var dataClass = $"data-{cssClass}";
            if (target.HasValue && demoData != null && demoData.TotalTested > 0)
            {
                var pctDiff = target.Value - demoData.PctProficient;
                var nDiff = 0m;
                if (pctDiff > 0) // Only calculate 'N' gap if target is not met
                {
                    nDiff = Math.Ceiling((demoData.TotalTested * pctDiff) / 100m);
                }
                
                var diffClass = pctDiff > 0 ? "diff-negative" : (pctDiff == 0 ? "diff-neutral" : "diff-positive");
                
                await writer.WriteAsync($"<td class=\"{dataClass} diff-cell {diffClass}\">");
                await writer.WriteAsync($"{pctDiff.ToString("0.#")}%");
                await writer.WriteAsync($"<span class=\"combined-count\">({nDiff.ToString("0")})</span>");
                await writer.WriteAsync("</td>");
            }
            else
            {
                await writer.WriteAsync($"<td class=\"{dataClass} diff-cell\">—</td>");
            }
        });
}

