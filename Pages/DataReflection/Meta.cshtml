<div id="toast-notification" class="toast-notification"></div>

<!-- === ADDED: JavaScript for Inline Editing === -->
<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Find the anti-forgery token on the page
        const tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
        if (!tokenInput) {
            console.error('Anti-forgery token not found.');
            return;
        }
        const antiForgeryToken = tokenInput.value;
        
        // Find the select elements
        const schoolIdSelect = document.getElementById('SchoolId-select');
        const schoolYearSelect = document.getElementById('SchoolYear-select');

        // Add change event listeners to all inline inputs
        const inputs = document.querySelectorAll('.inline-target-input');
        inputs.forEach(input => {
            input.addEventListener('change', function (e) {
                // Get all the data attributes from the input
                const grade = e.target.dataset.grade;
                const subject = e.target.dataset.subject;
                const demo = e.target.dataset.demo;
                const targetPercent = e.target.value;
                
                // Get current SchoolId and SchoolYear from the dropdowns
                const schoolId = schoolIdSelect ? schoolIdSelect.value : null;
                const schoolYear = schoolYearSelect ? schoolYearSelect.value : null;

                if (!grade || !subject || !demo) {
                    console.error('Missing data attributes on input field.');
                    showToast('Error: Missing data.', 'error');
                    return;
                }
                
                if (!schoolId || !schoolYear) {
                    console.error('Missing SchoolId or SchoolYear.');
                    showToast('Error: Missing School/Year.', 'error');
                    return;
                }

                // Create FormData to send in the POST request
                const formData = new FormData();
                formData.append('__RequestVerificationToken', antiForgeryToken);
                formData.append('grade', grade);
                formData.append('subject', subject);
                formData.append('demo', demo);
                formData.append('targetPercent', targetPercent);
                formData.append('schoolId', schoolId);
                formData.append('schoolYear', schoolYear);

                // Use fetch to send the data to the new handler
                fetch('?handler=UpdateTargetInline', {
                    method: 'POST',
                    body: formData
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        showToast('Saved!');
                        // === ADDED: Refresh the diff cell on success ===
                        updateDiffCell(e.target);
                    } else {
                        showToast(data.message || 'Error saving.', 'error');
                        // TODO: Optionally revert the input value on failure
                    }
                })
                .catch(error => {
                    console.error('Error saving target:', error);
                    showToast('Error: Save failed.', 'error');
                });
            });
        });

        // === ADDED: New function to update the Diff cell ===
        function updateDiffCell(inputElement) {
            const newTargetVal = inputElement.value;
            const targetCell = inputElement.closest('.target-cell');
            if (!targetCell) return;

            const profCell = targetCell.nextElementSibling;
            if (!profCell) return;

            const diffCell = profCell.nextElementSibling;
            if (!diffCell) return;

            let pctProficient = 0;
            let totalTested = 0;

            // 1. Get proficiency data from the prof-cell
            const profBadge = profCell.querySelector('.proficiency-badge');
            if (profBadge) {
                pctProficient = parseFloat(profBadge.textContent.replace('%', '')) || 0;
            }

            const countSpan = profCell.querySelector('.combined-count');
            if (countSpan) {
                const parts = countSpan.textContent.replace(/[()]/g, '').split(' / ');
                if (parts.length === 2) {
                    totalTested = parseInt(parts[1], 10) || 0;
                }
            }

            // 2. Handle empty/deleted target
            if (newTargetVal === '' || isNaN(parseFloat(newTargetVal))) {
                diffCell.innerHTML = '—';
                diffCell.className = `${diffCell.classList[0]} diff-cell`; // Reset classes
                targetCell.setAttribute('data-print-value', '—');
                return;
            }

            const newTarget = parseFloat(newTargetVal);
            targetCell.setAttribute('data-print-value', `${newTarget.toString()}%`);

            // 3. Handle rows with no tested students
            if (totalTested === 0) {
                diffCell.innerHTML = '—';
                diffCell.className = `${diffCell.classList[0]} diff-cell`; // Reset classes
                return;
            }

            // 4. Calculate and render new diff
            const pctDiff = newTarget - pctProficient;
            let nDiff = 0;
            if (pctDiff > 0) { // Only calculate 'N' gap if target is not met
                nDiff = Math.ceil((totalTested * pctDiff) / 100);
            }

            let diffClass = 'diff-neutral';
            if (pctDiff > 0) diffClass = 'diff-negative';
            if (pctDiff < 0) diffClass = 'diff-positive';

            // Re-render the cell's HTML
            diffCell.className = `${diffCell.classList[0]} diff-cell ${diffClass}`;
            diffCell.innerHTML = `${pctDiff.toFixed(1).replace('.0', '')}%<span class="combined-count">(${nDiff})</span>`;
        }

        // Helper function to show toast messages
        let toastTimeout;
        function showToast(message, type = 'success') {
            const toast = document.getElementById('toast-notification');
            if (!toast) return;

            toast.textContent = message;
            toast.className = 'toast-notification'; // Reset classes
            if (type === 'error') {
                toast.classList.add('error');
            }
            toast.classList.add('show');

            // Clear previous timeout if one exists
            if (toastTimeout) {
                clearTimeout(toastTimeout);
            }

            // Set new timeout to hide the toast
            toastTimeout = setTimeout(() => {
                toast.classList.remove('show');
            }, 3000);
        }
    });
</script>