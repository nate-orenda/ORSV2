            font-weight: 600;
            padding: 0.75rem;
            text-align: center;
            border-bottom: 2px solid #1e3a8a;
        }

        .totals-summary-table td {
            padding: 0.6rem;
            text-align: center;
            border-bottom: 1px solid #e5e7eb;
            border-right: 1px solid #e5e7eb;
        }

        .totals-summary-table td:last-child {
