            --group-color: #1e40af;
            --group-color-dark: #1e3a8a;
        }

        .dtrg-start.benchmark td {
            --group-color: #16a34a;
            --group-color-dark: #15803d;
        }

        .dtrg-start.strategic td {
            --group-color: #FEC401;
            --group-color-dark: #F59E0B;
