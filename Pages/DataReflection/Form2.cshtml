<div class="orenda-header">
    <h2 class="mb-1">Quadrant Breakdown</h2>
    @if (!string.IsNullOrEmpty(Model.DistrictName))
    {
        <h5 class="fw-normal mb-0 opacity-75">District: @Model.DistrictName</h5>
    }
    <p class="mb-0 mt-2">Challenge · Benchmark · Strategic · Intensive</p>
</div>

<div class="orenda-card mb-3">
    <div class="orenda-card-body">
        <form method="get" class="d-flex flex-wrap gap-3 align-items-end">
            <input type="hidden" asp-for="DistrictId" />
            <div class="flex-grow-1" style="min-width: 120px;">
                <label class="form-label fw-semibold">Unit/Cycle</label>
                <select name="UnitCycle" class="form-select orenda-select" onchange="this.form.submit()">
                    @foreach (var o in Model.AvailableUnitCycles)
                    {
                        <option value="@o.Value" selected="@(o.Value == Model.UnitCycle)">@o.Text</option>
                    }
                </select>
            </div>
            <div class="flex-grow-1" style="min-width: 200px;">
                <label class="form-label fw-semibold">Assessment</label>
                <select name="BatchId" class="form-select orenda-select" onchange="this.form.submit()">
                    @foreach (var o in Model.AvailableBatches)
                    {
                        <option value="@o.Value" selected="@(o.Value == Model.BatchId)">@o.Text</option>
                    }
                </select>
            </div>
            <div class="flex-grow-1" style="min-width: 200px;">
                <label class="form-label fw-semibold">School</label>
                <select name="SchoolId" class="form-select orenda-select" onchange="this.form.submit()">
                    @foreach (var o in Model.AvailableSchools)
                    {
                        <option value="@o.Value" selected="@(o.Value == (Model.SchoolId?.ToString() ?? ""))">@o.Text
                        </option>
                    }
                </select>
            </div>
            <div class="flex-grow-1" style="min-width: 200px;">
                <label class="form-label fw-semibold">Teacher</label>
                <select name="TeacherId" class="form-select orenda-select" onchange="this.form.submit()">
                    @foreach (var o in Model.AvailableTeachers)
                    {
                        <option value="@o.Value" selected="@(o.Value == (Model.TeacherId?.ToString() ?? ""))">@o.Text
                        </option>
                    }
                </select>
            </div>
        </form>
    </div>
</div>

<div class="orenda-card mb-3">
    <div class="orenda-card-body d-flex flex-wrap gap-3">
        <div><span class="badge-compact"
                style="background-color: var(--quad-challenge-bg);
                       color: var(--quad-challenge-fg);">Race/Ethnicity =
                Black or African American</span></div>
        <div><span class="badge-compact"
                style="background-color: #ffe6b3;
                       color: #664d00;">Race/Ethnicity =
                Hispanic/Latino</span></div>
        <div><span class="badge-compact" style="background-color: #fce7f3;
                       color: #9d174d;">Language Fluency = EL</span>
        </div>
        <div><span class="badge-compact"
                style="background-color: var(--quad-strategic-bg);
                       color: var(--quad-strategic-fg);">SWD = true</span>
        </div>
        <div><span class="badge-compact"
                style="background-color: #ffb366;
                       color: #422006;">SED = true</span>
        </div>
    </div>
</div>

@if (!Model.Students.Any())
{
    <div class="orenda-card">
        <div class="orenda-card-body text-muted">Select Unit/Cycle and Assessment to view quadrant breakdown.</div>
    </div>
}
else
{
    <!-- Comprehensive Totals Summary -->
    <div class="orenda-card totals-summary-table">
        <table>
            <thead>
                <tr>
                    <th colspan="7" class="section-title">Quadrant Summary - All Student Groups</th>
                </tr>
                <tr>
                    <th style="width: 20%;">Quadrant</th>
                    <th style="width: 13%;">African American</th>
                    <th style="width: 13%;">Hispanic</th>
                    <th style="width: 13%;">English Learner</th>
                    <th style="width: 13%;">SWD</th>
                    <th style="width: 13%;">SED</th>
                    <th style="width: 15%;">All Students</th>
                </tr>
            </thead>
            <tbody>
                @{
                    var quadrantOrder = new[] { "Challenge", "Benchmark", "Strategic", "Intensive" };
                    var quadrantData = new Dictionary<string, ORSV2.Pages.DataReflection.Form2Model.QuadTotals>();
                    
                    foreach (var quadrantName in quadrantOrder)
                    {
                        var totals = new ORSV2.Pages.DataReflection.Form2Model.QuadTotals();
                        var studentsInQuad = Model.Students.Where(s => s.Quadrant.Equals(quadrantName, StringComparison.OrdinalIgnoreCase)).ToList();
                        
                        totals.All.Total = studentsInQuad.Count;
                        totals.All.Passed = studentsInQuad.Count;
                        
                        totals.AA.Total = studentsInQuad.Count(s => s.IsAA);
                        totals.AA.Passed = studentsInQuad.Count(s => s.IsAA);
                        
                        totals.Hispanic.Total = studentsInQuad.Count(s => s.IsHispanic);
                        totals.Hispanic.Passed = studentsInQuad.Count(s => s.IsHispanic);
                        
                        totals.EL.Total = studentsInQuad.Count(s => s.IsEL);
                        totals.EL.Passed = studentsInQuad.Count(s => s.IsEL);
                        
                        totals.SWD.Total = studentsInQuad.Count(s => s.IsSWD);
                        totals.SWD.Passed = studentsInQuad.Count(s => s.IsSWD);
                        
                        totals.SED.Total = studentsInQuad.Count(s => s.IsSed);
                        totals.SED.Passed = studentsInQuad.Count(s => s.IsSed);
                        
                        quadrantData[quadrantName] = totals;
                    }
                    
                    // Calculate grand totals
                    var grandTotals = new ORSV2.Pages.DataReflection.Form2Model.QuadTotals();
                    grandTotals.All.Total = Model.Students.Count;
                    grandTotals.All.Passed = Model.Students.Count;
                    grandTotals.AA.Total = Model.Students.Count(s => s.IsAA);
                    grandTotals.AA.Passed = Model.Students.Count(s => s.IsAA);
                    grandTotals.Hispanic.Total = Model.Students.Count(s => s.IsHispanic);
                    grandTotals.Hispanic.Passed = Model.Students.Count(s => s.IsHispanic);
                    grandTotals.EL.Total = Model.Students.Count(s => s.IsEL);
                    grandTotals.EL.Passed = Model.Students.Count(s => s.IsEL);
                    grandTotals.SWD.Total = Model.Students.Count(s => s.IsSWD);
                    grandTotals.SWD.Passed = Model.Students.Count(s => s.IsSWD);
                    grandTotals.SED.Total = Model.Students.Count(s => s.IsSed);
                    grandTotals.SED.Passed = Model.Students.Count(s => s.IsSed);
                }
                
                @foreach (var quadrantName in quadrantOrder)
                {
                    var totals = quadrantData[quadrantName];
                    var cssClass = quadrantName.ToLower();
                    <tr>
                        <td class="quadrant-label @cssClass">@quadrantName</td>
                        <td>
                            @if (grandTotals.AA.Total > 0)
                            {
                                <span class="metric-value">@((totals.AA.Total * 100.0 / grandTotals.AA.Total).ToString("0"))% - @totals.AA.Total</span>
                            }
                            else
                            {
                                <span class="metric-value">@totals.AA.Total</span>
                            }
                        </td>
                        <td>
                            @if (grandTotals.Hispanic.Total > 0)
                            {
                                <span class="metric-value">@((totals.Hispanic.Total * 100.0 / grandTotals.Hispanic.Total).ToString("0"))% - @totals.Hispanic.Total</span>
                            }
                            else
                            {
                                <span class="metric-value">@totals.Hispanic.Total</span>
                            }
                        </td>
                        <td>
                            @if (grandTotals.EL.Total > 0)
                            {
                                <span class="metric-value">@((totals.EL.Total * 100.0 / grandTotals.EL.Total).ToString("0"))% - @totals.EL.Total</span>
                            }
                            else
                            {
                                <span class="metric-value">@totals.EL.Total</span>
                            }
                        </td>
                        <td>
                            @if (grandTotals.SWD.Total > 0)
                            {
                                <span class="metric-value">@((totals.SWD.Total * 100.0 / grandTotals.SWD.Total).ToString("0"))% - @totals.SWD.Total</span>
                            }
                            else
                            {
                                <span class="metric-value">@totals.SWD.Total</span>
                            }
                        </td>
                        <td>
                            @if (grandTotals.SED.Total > 0)
                            {
                                <span class="metric-value">@((totals.SED.Total * 100.0 / grandTotals.SED.Total).ToString("0"))% - @totals.SED.Total</span>
                            }
                            else
                            {
                                <span class="metric-value">@totals.SED.Total</span>
                            }
                        </td>
                        <td>
                            @if (grandTotals.All.Total > 0)
                            {
                                <span class="metric-value">@((totals.All.Total * 100.0 / grandTotals.All.Total).ToString("0"))% - @totals.All.Total</span>
                            }
                            else
                            {
                                <span class="metric-value">@totals.All.Total</span>
                            }
                        </td>
                    </tr>
                }
                <tr class="grand-total-row">
                    <td class="quadrant-label">TOTAL</td>
                    <td><span class="metric-value">100% - @grandTotals.AA.Total</span></td>
                    <td><span class="metric-value">100% - @grandTotals.Hispanic.Total</span></td>
                    <td><span class="metric-value">100% - @grandTotals.EL.Total</span></td>
                    <td><span class="metric-value">100% - @grandTotals.SWD.Total</span></td>
                    <td><span class="metric-value">100% - @grandTotals.SED.Total</span></td>
                    <td><span class="metric-value">100% - @grandTotals.All.Total</span></td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="orenda-table-wrapper" id="quadrantExportRoot">
        @if (!string.IsNullOrEmpty(Model.FormattedTitle))
        {
            <h4 class="table-title">@Model.FormattedTitle</h4>
        }
        <table id="quadrantTable" class="table orenda-table" style="width:100%">
            <thead>
                <tr>
                    <th style="display:none;">Quadrant</th>
                    <th>Last Name</th>
                    <th>First Name</th>
                    <th>Race/Ethnicity</th>
                    <th>Language Fluency</th>
                    <th>SWD</th>
                    <th>SED</th> <th>Total Passed</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var student in Model.FlattenedStudents.Where(s => !s.IsQuadrantTotal))
                {
                    <tr>
                        <td style="display:none;">@student.QuadrantName</td>
      
                        <td>@student.LastName</td>
                        <td>@student.FirstName</td>
                        <td class="@(student.IsAA ? "hi-aa" : "") @(student.IsHispanic ? "hi-hispanic" : "")">@student.RaceEthnicity</td>
                        <td class="@(student.IsEL ? "hi-el" : "")">@student.LanguageFluencyDisplay</td>
                        <td class="@(student.IsSWD ? "hi-swd" : "")">@student.SWDDisplay</td>
                        <td class="@(student.IsSed ? "hi-sed" : "")">@student.SEDDisplay</td>
                        <td>@student.TotalPassed</td>
                
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

