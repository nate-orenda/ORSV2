<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ORSV2</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.4.1/css/buttons.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/colreorder/1.6.2/css/colReorder.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/select/1.7.0/css/select.dataTables.min.css" />
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" /> 
    @RenderSection("Styles", required: false)
</head>
<body class="d-flex flex-column min-vh-100">

    @if (User.Identity?.IsAuthenticated == true)
    {
        <header class="main-header sticky-top">
            <nav class="navbar navbar-expand-lg">
                <div class="container-fluid px-lg-4">
                    <!-- Logo/Brand -->
                    <a asp-page="/Index" class="navbar-brand d-flex align-items-center text-white text-decoration-none">
                        <img src="~/images/orenda-logo.png" alt="Orenda Logo" class="brand-logo me-2" />
                    </a>

                    <!-- Spacer for mobile toggle positioning -->
                    <div class="d-lg-none"></div>

                    <!-- Mobile menu toggle -->
                    <button class="navbar-toggler ms-auto" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" 
                            aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <!-- Collapsible content -->
                    <div class="collapse navbar-collapse" id="navbarContent">
                        <div class="d-lg-flex w-100 justify-content-between align-items-center">
                            
                            <!-- Main Navigation -->
                            <nav class="nav-main d-flex flex-lg-row flex-column align-items-lg-center">
                                <a asp-page="/Index" class="nav-link">
                                    <i class="bi bi-house me-1"></i>Dashboard
                                </a>
                                <a asp-page="/GuidanceAlignment/Schools" class="nav-link" id="guidanceAlignmentLink">
                                    <i class="bi bi-compass me-1"></i>Guidance Alignment
                                </a>
                                
                                <!-- Curriculum Alignment as direct link -->
                                <a asp-page="/CurriculumAlignment/Index" class="nav-link" id="curriculumAlignmentLink">
                                    <i class="bi bi-book me-1"></i>Curriculum Alignment
                                </a>

                                <!-- Administration Dropdown -->
                                <div class="dropdown">
                                    <button class="dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-gear me-1"></i>Administration
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a class="dropdown-item" asp-page="/Admin/Users/Index">
                                                <i class="bi bi-people me-2"></i>Users
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-page="/Districts/Index">
                                                <i class="bi bi-building me-2"></i>Districts
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-page="/Admin/FileImport/Assessments/Illuminate">
                                                <i class="bi bi-cloud-upload me-2"></i>Import Illuminate
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-page="/Admin/FileImport/Assessments/Lennections">
                                                <i class="bi bi-cloud-upload me-2"></i>Import CASA
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </nav>

                            <!-- Right side: District Focus + User Profile -->
                            <div class="d-flex align-items-center gap-2">
                                
                                <!-- District Focus Selector (for all authenticated users) -->
                                <div class="district-focus-selector dropdown" id="districtFocusSelector" style="display: none;">
                                    <button class="btn dropdown-toggle d-flex align-items-center" type="button" 
                                            data-bs-toggle="dropdown" aria-expanded="false" id="districtFocusButton">
                                        <i class="bi bi-building me-1 fs-6"></i>
                                        <span class="district-name" id="focusDistrictName">Select District</span>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end" id="districtDropdownMenu">
                                        <!-- Populated by JavaScript -->
                                    </ul>
                                </div>

                                <!-- User Profile Section -->
                                <div class="user-profile dropdown">
                                    <button class="btn dropdown-toggle d-flex align-items-center" type="button" 
                                            data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-person-circle me-2 fs-5"></i>
                                        <span class="d-none d-md-inline">@(User.Identity?.Name ?? "User")</span>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                        <li>
                                            <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">
                                                <i class="bi bi-person me-2"></i>Profile
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/ChangePassword">
                                                <i class="bi bi-key me-2"></i>Change Password
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="d-inline">
                                                <button type="submit" class="dropdown-item">
                                                    <i class="bi bi-box-arrow-right me-2"></i>Logout
                                                </button>
                                            </form>
                                        </li>
                                    </ul>
                                </div>

                            </div>

                        </div>
                    </div>
                </div>
            </nav>
        </header>
    }

    <main class="flex-grow-1 container mt-3">
        @RenderBody()
    </main>

    <footer class="bg-white border-top" style="border-color: #e5e5e5 !important;">
        <div class="container-fluid py-3 px-4">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <p class="mb-0 text-muted">&copy; 2025 - Orenda Education</p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Anti-forgery token for AJAX requests -->
    @Html.AntiForgeryToken()

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/colreorder/1.6.2/js/dataTables.colReorder.min.js"></script>
    <script src="https://cdn.datatables.net/select/1.7.0/js/dataTables.select.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // District Focus Context Management for ALL authenticated users
        (function() {
            // Check if user is authenticated
            if (!@(User.Identity?.IsAuthenticated == true ? "true" : "false")) return;

            // Get current user roles
            const isOrendaUser = @(User.IsInRole("OrendaAdmin") || User.IsInRole("OrendaManager") || User.IsInRole("OrendaUser") ? "true" : "false");
            
            // DOM elements
            const districtSelector = document.getElementById('districtFocusSelector');
            const districtNameEl = document.getElementById('focusDistrictName');
            const dropdownMenu = document.getElementById('districtDropdownMenu');
            
            let availableDistricts = [];
            let currentFocusDistrict = null;
            
            // Get focus district from multiple sources
            function getFocusDistrict() {
                // First check ViewData (from current page)
                const serverFocusId = '@ViewData["FocusDistrictId"]';
                const serverFocusName = '@ViewData["FocusDistrictName"]';
                
                if (serverFocusId && serverFocusName && serverFocusId !== '') {
                    return { id: parseInt(serverFocusId), name: serverFocusName };
                }
                
                // Fall back to localStorage
                const stored = localStorage.getItem('focusDistrict');
                return stored ? JSON.parse(stored) : null;
            }

            // Set focus district and update UI
            function setFocusDistrict(district) {
                if (district && district.id && district.name) {
                    currentFocusDistrict = district;
                    localStorage.setItem('focusDistrict', JSON.stringify(district));
                    updateDistrictSelector(district);
                    updateNavigationLinks(district.id);
                }
            }

            // Update district selector display
            function updateDistrictSelector(district) {
                if (!districtSelector || !districtNameEl) return;
                
                if (district) {
                    districtSelector.style.display = 'block';
                    districtNameEl.textContent = district.name;
                    
                    // Truncate long names for display
                    if (district.name.length > 15) {
                        districtNameEl.textContent = district.name.substring(0, 15) + '...';
                        districtNameEl.title = district.name;
                    }
                } else {
                    districtSelector.style.display = 'none';
                }
            }

            function populateDistrictDropdown() {
    if (!dropdownMenu || availableDistricts.length <= 1) return;
    dropdownMenu.innerHTML = '';
    
    // Add current district at top (disabled)
    if (currentFocusDistrict) {
        const currentItem = document.createElement('li');
        currentItem.innerHTML = `
            <span class="dropdown-item-text">
                <i class="bi bi-star-fill me-2 text-warning"></i>
                ${currentFocusDistrict.name} 
            </span>
        `;
        dropdownMenu.appendChild(currentItem);
        
        const divider = document.createElement('li');
        divider.innerHTML = '<hr class="dropdown-divider">';
        dropdownMenu.appendChild(divider);
    }
    
    // Add other available districts
    availableDistricts
        .filter(d => !currentFocusDistrict || d.id !== currentFocusDistrict.id)
        .forEach(district => 
        {
            const item = document.createElement('li');
            item.innerHTML = `
                <a class="dropdown-item district-switch-option" href="#" data-district-id="${district.id}">
                    <i class="bi bi-building me-2"></i>
                    ${district.name}
                </a>
        `;
            dropdownMenu.appendChild(item);
        });
    // Add event listeners to new items
    dropdownMenu.querySelectorAll('.district-switch-option').forEach(item => {
        item.addEventListener('click', handleDistrictSwitch);
    });
}

// Handle district switching
function handleDistrictSwitch(e) {
    e.preventDefault();
    const districtId = parseInt(e.currentTarget.dataset.districtId);
    // ðŸ‘‡ CHANGE HERE: d.Id -> d.id
    const district = availableDistricts.find(d => d.id === districtId);
    if (district) {
        // Set focus district
        // ðŸ‘‡ CHANGE HERE: district.Id -> district.id, district.Name -> district.name
        setFocusDistrict({ id: district.id, name: district.name });
        // Update dropdown immediately
        populateDistrictDropdown();
        // Dispatch event for other components
        window.dispatchEvent(new CustomEvent('focusDistrictChanged', { 
            detail: currentFocusDistrict 
        }));
        // Optional: Call server to persist the change
        updateFocusDistrictOnServer(district.id);
    }
}

            // Update focus district on server and reload page
            async function updateFocusDistrictOnServer(districtId) {
                try {
                    // Try the Index handler first (if we're on the Index page)
                    let response = await fetch('/Index?handler=SetFocus', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/x-www-form-urlencoded',
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                        },
                        body: `districtId=${districtId}`
                    });

                    if (response.ok) {
                        const data = await response.json();
                        if (data.success) {
                            // Successfully updated on server, reload the page to show changes
                            window.location.reload();
                            return;
                        }
                    }

                    // Fallback to API if Index handler failed
                    response = await fetch('/api/district/focus', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                        },
                        body: JSON.stringify({ districtId: districtId })
                    });

                    if (response.ok) {
                        const data = await response.json();
                        if (data.success) {
                            // Successfully updated via API, reload the page
                            window.location.reload();
                            return;
                        }
                    }
                    
                    // If server update failed, at least the localStorage is updated
                    console.log('Server update failed, but localStorage updated');
                } catch (error) {
                    console.log('Server update failed, using localStorage only');
                }
            }

            // Update navigation links to include focus district
            function updateNavigationLinks(districtId) {
                if (!districtId) return;

                // Update Guidance Alignment link
                const gaLink = document.getElementById('guidanceAlignmentLink');
                if (gaLink) {
                    // Check if it already has a base href, if not use the asp-page value as base
                    const basePage = '/GuidanceAlignment/Schools';
                    gaLink.href = `${basePage}?DistrictId=${districtId}`;
                }

                // Update Curriculum Alignment link
                const caLink = document.getElementById('curriculumAlignmentLink');
                if (caLink) {
                    const basePage = '/CurriculumAlignment/Index';
                    caLink.href = `${basePage}?districtId=${districtId}`;
                }
            }

            // Fetch available districts and focus district from server
            async function fetchDistrictDataFromServer() {
                try {
                    // First try to get data from ViewData (if the page provides it)
                    const serverFocusId = '@ViewData["FocusDistrictId"]';
                    const serverFocusName = '@ViewData["FocusDistrictName"]';
                    const serverAvailableDistricts = '@Html.Raw(ViewData["AvailableDistricts"] ?? "null")';
                    
                    // Parse available districts if provided by the page
                    if (serverAvailableDistricts && serverAvailableDistricts !== 'null' && serverAvailableDistricts !== '[]') {
                        try {
                            availableDistricts = JSON.parse(serverAvailableDistricts);
                        } catch (e) {
                            console.debug('Could not parse available districts from ViewData:', e);
                        }
                    }
                    
                    if (serverFocusId && serverFocusName && serverFocusId !== '') {
                        // If ViewData provided the info and we got districts, we're good
                        if (availableDistricts.length > 0) {
                            return { id: parseInt(serverFocusId), name: serverFocusName };
                        }
                    }

                    // Fallback: Use the API endpoint to get district context
                    const response = await fetch('/api/district/context', {
                        method: 'GET',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                        }
                    });

                    if (response.ok) {
                        const data = await response.json();
                        
                        if (data.success) {
                            if (data.availableDistricts) {
                                availableDistricts = data.availableDistricts;
                            }
                            
                            if (data.focusDistrictId && data.focusDistrictName) {
                                return { id: data.focusDistrictId, name: data.focusDistrictName };
                            }
                        }
                    }
                } catch (error) {
                    console.debug('Could not fetch district data from server:', error);
                }
                return null;
            }

            // Initialize focus district and dropdown
            async function initializeDistrictSelector() {
                let focusDistrict = getFocusDistrict();
                
                // Always try to get district data from server to populate availableDistricts
                const serverData = await fetchDistrictDataFromServer();
                if (serverData && !focusDistrict) {
                    focusDistrict = serverData;
                }
                
                if (focusDistrict) {
                    setFocusDistrict(focusDistrict);
                    
                    // Show dropdown for Orenda users with multiple districts
                    if (isOrendaUser && availableDistricts.length > 1) {
                        populateDistrictDropdown();
                    }
                } else {
                    // Hide the selector if no focus district
                    if (districtSelector) {
                        districtSelector.style.display = 'none';
                    }
                }
            }

            // Listen for focus district changes from other parts of the app
            window.addEventListener('focusDistrictChanged', (event) => {
                setFocusDistrict(event.detail);
                if (isOrendaUser && availableDistricts.length > 1) {
                    populateDistrictDropdown();
                }
            });

            // Expose global functions for other scripts
            window.setOrendaFocusDistrict = setFocusDistrict;
            window.getOrendaFocusDistrict = getFocusDistrict;

            // Initialize on page load
            initializeDistrictSelector();
        })();

        // Auto-close mobile menu when clicking nav links
        document.querySelectorAll('.nav-main .nav-link').forEach(link => {
            link.addEventListener('click', () => {
                const navCollapse = document.querySelector('.navbar-collapse');
                if (navCollapse && navCollapse.classList.contains('show')) {
                    const bsCollapse = new bootstrap.Collapse(navCollapse, { toggle: false });
                    bsCollapse.hide();
                }
            });
        });

        // Smooth scrolling for better UX
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({ behavior: 'smooth', block: 'start' });
                }
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>