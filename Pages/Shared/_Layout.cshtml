<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ORSV2</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.4.1/css/buttons.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/colreorder/1.6.2/css/colReorder.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/select/1.7.0/css/select.dataTables.min.css" />
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
    @RenderSection("Styles", required: false)
</head>
<body>

    @if (User.Identity?.IsAuthenticated == true)
    {
        <div class="page-wrapper">
            <!-- Sidebar -->
            <aside class="sidebar">
                <div class="sidebar-header">
                    <a asp-page="/Index" class="sidebar-brand">
                        <img src="~/images/orenda-logo.png" alt="Orenda Logo" class="brand-logo" />
                    </a>
                </div>

                <nav class="sidebar-nav">
                    <ul class="list-unstyled">
                        <li class="sidebar-item">
                            <a asp-page="/Index" class="sidebar-link">
                                <i class="bi bi-house me-2"></i><span>Dashboard</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a asp-page="/GuidanceAlignment/Index" class="sidebar-link">
                                <i class="bi bi-compass me-2"></i><span>Guidance Alignment</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a href="#curriculum-submenu" data-bs-toggle="collapse" class="sidebar-link collapsed" role="button" aria-expanded="false" aria-controls="curriculum-submenu">
                                <i class="bi bi-book me-2"></i>
                                <span>Curriculum Alignment</span>
                                <i class="bi bi-chevron-down submenu-caret"></i>
                            </a>
                            <ul id="curriculum-submenu" class="list-unstyled collapse submenu">
                                <li class="submenu-item">
                                    <a class="submenu-link" asp-page="/CurriculumAlignment/Form1">
                                        <i class="bi bi-file-text me-2"></i>Form 1
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="sidebar-item">
                            <a href="#admin-submenu" data-bs-toggle="collapse" class="sidebar-link collapsed" role="button" aria-expanded="false" aria-controls="admin-submenu">
                                <i class="bi bi-gear me-2"></i>
                                <span>Administration</span>
                                <i class="bi bi-chevron-down submenu-caret"></i>
                            </a>
                            <ul id="admin-submenu" class="list-unstyled collapse submenu">
                                <li class="submenu-item">
                                    <a class="submenu-link" asp-page="/Admin/Users/Index">
                                        <i class="bi bi-people me-2"></i>Users
                                    </a>
                                </li>
                                <li class="submenu-item">
                                    <a class="submenu-link" asp-page="/Districts/Index">
                                        <i class="bi bi-building me-2"></i>Districts
                                    </a>
                                </li>
                                <li class="submenu-item">
                                    <a class="submenu-link" asp-page="/Admin/FileImport/Assessments/Illuminate">
                                        <i class="bi bi-cloud-upload me-2"></i>Import Illuminate
                                    </a>
                                </li>
                                <li class="submenu-item">
                                    <a class="submenu-link" asp-page="/Admin/FileImport/Assessments/Lennections">
                                        <i class="bi bi-cloud-upload me-2"></i>Import CASA
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </nav>

                <div class="sidebar-footer dropdown dropup">
                    <a href="#" class="sidebar-link dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-person-circle me-2"></i>
                        <span>@(User.Identity?.Name ?? "User")</span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-dark">
                        <li>
                            <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">
                                <i class="bi bi-person me-2"></i>Profile
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/ChangePassword">
                                <i class="bi bi-key me-2"></i>Change Password
                            </a>
                        </li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="d-inline">
                                <button type="submit" class="dropdown-item">
                                    <i class="bi bi-box-arrow-right me-2"></i>Logout
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            </aside>

            <!-- Main Content -->
            <div class="main-content-wrapper">
                <header class="topbar">
                    <button class="sidebar-toggle-btn" type="button" aria-label="Toggle sidebar">
                        <i class="bi bi-list"></i>
                    </button>
                    <!-- Future Topbar Content (e.g., Breadcrumbs, Search) can go here -->
                </header>

                <main class="content-fluid flex-grow-1 p-3 p-md-4">
                    @RenderBody()
                </main>

                <footer class="bg-white border-top">
                    <div class="container-fluid py-3 px-4">
                        <p class="mb-0 text-muted">&copy; @DateTime.Now.Year - Orenda Education</p>
                    </div>
                </footer>
            </div>
            <div class="sidebar-overlay"></div>
        </div>
    }
    else
    {
        <main class="flex-grow-1">
            @RenderBody()
        </main>
    }


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/colreorder/1.6.2/js/dataTables.colReorder.min.js"></script>
    <script src="https://cdn.datatables.net/select/1.7.0/js/dataTables.select.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const sidebarToggle = document.querySelector(".sidebar-toggle-btn");
            const sidebarOverlay = document.querySelector(".sidebar-overlay");
            const pageWrapper = document.querySelector(".page-wrapper");

            const toggleSidebar = () => {
                pageWrapper.classList.toggle("sidebar-toggled");
            };

            if (sidebarToggle) {
                sidebarToggle.addEventListener("click", toggleSidebar);
            }

            if (sidebarOverlay) {
                sidebarOverlay.addEventListener("click", toggleSidebar);
            }

            // --- Active Sidebar Link Logic ---
            const currentPage = window.location.pathname;

            // Handle dashboard link specifically to avoid it always being active
            // Note: The asp-page="/Index" resolves to "/" in the browser.
            if (currentPage === '/') {
                const dashboardLink = document.querySelector('a.sidebar-link[href="/"]');
                if (dashboardLink) {
                    dashboardLink.closest('.sidebar-item').classList.add('active');
                }
            } else {
                // Find the best (longest) match for other pages
                let bestMatch = null;
                document.querySelectorAll('.sidebar-link[href], .submenu-link[href]').forEach(link => {
                    const linkHref = link.getAttribute('href');
                    // Ensure linkHref is not null and not the root path which is handled separately
                    if (linkHref && linkHref !== '/' && currentPage.toLowerCase().startsWith(linkHref.toLowerCase())) {
                        if (!bestMatch || linkHref.length > bestMatch.getAttribute('href').length) {
                            bestMatch = link;
                        }
                    }
                });

                if (bestMatch) {
                    bestMatch.classList.add('active');
                    const parentItem = bestMatch.closest('.sidebar-item');
                    if (parentItem) parentItem.classList.add('active');

                    const parentSubmenu = bestMatch.closest('.submenu');
                    if (parentSubmenu) {
                        parentSubmenu.classList.add('show');
                        const parentToggle = document.querySelector(`a[href="#${parentSubmenu.id}"]`);
                        if (parentToggle) {
                            parentToggle.classList.remove('collapsed');
                            parentToggle.setAttribute('aria-expanded', 'true');
                        }
                    }
                }
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
