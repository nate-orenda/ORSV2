@model (string Name, bool? Met, string? ValueDisplay, string? Requirement)

<div class="col">
    <div class="card h-100 border-0 shadow-sm rounded-3">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <h6 class="card-title mb-0">@Model.Name</h6>
                <span class="badge @(Model.Met == true ? "bg-success" : "bg-danger")">
                    @(Model.Met == true ? "Met" : "Not Met")
                </span>
            </div>
            @if (!string.IsNullOrEmpty(Model.ValueDisplay))
            {
                <p class="mb-1">@Model.ValueDisplay</p>
            }
            @if (!string.IsNullOrEmpty(Model.Requirement))
            {
                <p class="mb-0 text-muted small"><em>Requirement: @Model.Requirement</em></p>
            }
        </div>
    </div>
</div>
