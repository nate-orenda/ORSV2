@page "{id:int}"
@model ORSV2.Pages.Districts.DeleteModel
@{
    ViewData["Title"] = "Delete District";
}

<h1>Delete District</h1>

<h4>Are you sure you want to delete this district?</h4>
<div>
    <h5>@Model.District.Name</h5>
    <p><strong>CDS Code:</strong> @Model.District.CDSCode</p>
    <p><strong>API URL:</strong> @Model.District.SISBaseUrl</p>
    <p><strong>Notes:</strong> @Model.District.Notes</p>
</div>

<form method="post">
    <input type="hidden" asp-for="District.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">
        @Model.ErrorMessage
    </div>
}
