@page
@model ORSV2.Pages.CurriculumAlignment.Form1Model
@{
    ViewData["Title"] = "Student Assessment Results";
}

<div class="form1-container no-print">
    <div class="form1-header">
        <h1 class="mb-0">
            <i class="fas fa-chart-line me-2"></i>
            Student Assessment Results
        </h1>
        <p class="mb-0">Select filters to view student and standard proficiency data.</p>
    </div>

    <div class="form1-card">
        <div class="form1-card-header">
            <h5 class="mb-0">
                <i class="fas fa-filter me-2"></i>
                Filter Options
            </h5>
        </div>
        <div class="card-body">
            <!-- Filter Rows are unchanged -->
            <div class="row g-3">
                <div class="col-md-3">
                    <label asp-for="SelectedDistrictId" class="form-label fw-semibold">District</label>
                    <select asp-for="SelectedDistrictId" asp-items="Model.Districts" class="form-select" id="districtSelect">
                        <option value="">-- Select District --</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label asp-for="SelectedUnit" class="form-label fw-semibold">Unit</label>
                    <select asp-for="SelectedUnit" asp-items="Model.Units" class="form-select" id="unitSelect" disabled>
                        <option value="">-- Select Unit --</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label asp-for="SelectedTestId" class="form-label fw-semibold">Test Name</label>
                    <select asp-for="SelectedTestId" asp-items="Model.TestNames" class="form-select" id="testIdSelect" disabled>
                        <option value="">-- Select Test --</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label asp-for="SelectedSchoolId" class="form-label fw-semibold">School</label>
                    <select asp-for="SelectedSchoolId" asp-items="Model.Schools" class="form-select" id="schoolSelect" disabled>
                        <option value="">-- Select School --</option>
                    </select>
                </div>
            </div>
            <div class="row g-3 mt-3">
                 <div class="col-md-6">
                    <label asp-for="SelectedTeacherId" class="form-label fw-semibold">Teacher</label>
                    <select asp-for="SelectedTeacherId" asp-items="Model.Teachers" class="form-select" id="teacherSelect" disabled>
                        <option value="">-- All Teachers --</option>
                    </select>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="form1-card">
    <div class="form1-card-header d-flex justify-content-between align-items-center">
         <h5 class="mb-0">
            <i class="fas fa-users me-2"></i>
            Student Results
        </h5>
        <div id="exportButtons" class="no-print d-none">
            <button id="printBtn" class="btn btn-sm btn-outline-secondary"><i class="fas fa-print me-1"></i> Print</button>
            <button id="pdfBtn" class="btn btn-sm btn-outline-danger"><i class="fas fa-file-pdf me-1"></i> PDF</button>
            <button id="excelBtn" class="btn btn-sm btn-outline-success"><i class="fas fa-file-excel me-1"></i> Excel</button>
            <button id="csvBtn" class="btn btn-sm btn-outline-secondary"><i class="fas fa-file-csv me-1"></i> CSV</button>
        </div>
    </div>
    <div class="card-body">
        <div id="resultsContainer">
            <p class="text-muted">Please make a selection to view student data.</p>
        </div>
        <div class="loading-spinner" id="loadingIndicator">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <div class="mt-2 text-muted">Loading...</div>
        </div>
    </div>
</div>


<style>
    /* ... existing styles ... */
    .form1-container { max-width: 100%; margin: 0 auto; padding: 1rem; }
    .form1-header { background: linear-gradient(135deg, #0022C5, #1a4fb8); color: white; padding: 2rem; border-radius: 0.5rem; margin-bottom: 1.5rem; }
    .form1-card { background: white; border-radius: 0.5rem; box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075); border: 1px solid #dee2e6; margin-bottom: 1.5rem; }
    .form1-card-header { background-color: #f8f9fa; color: #212529; padding: 1rem 1.5rem; border-bottom: 1px solid #dee2e6; border-radius: 0.5rem 0.5rem 0 0; }
    .card-body { padding: 1.5rem; }
    .loading-spinner { display: none; text-align: center; padding: 2rem; }
    .orenda-table th small { font-weight: normal; display: block; max-width: 250px; white-space: normal; line-height: 1.2; margin-top: 4px; }
    .teacher-group-header { background-color: #343a40 !important; color: white !important; font-size: 1.1rem; padding: 0.75rem !important; }
    .class-group-header { background-color: #e9ecef !important; font-weight: bold; padding: 0.6rem 0.75rem !important; }

    @@media print {
        body * { visibility: hidden; }
        .no-print { display: none !important; }
        #resultsContainer, #resultsContainer * { visibility: visible; }
        #resultsContainer { position: absolute; left: 0; top: 0; width: 100%; }
        .table { font-size: 9pt; page-break-inside: auto; }
        tr { page-break-inside: avoid; page-break-after: auto; }
        thead { display: table-header-group; }
        .teacher-group-header { page-break-before: always; }
        .teacher-group-header, .class-group-header { -webkit-print-color-adjust: exact; }
    }
</style>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/3.8.2/jspdf.plugin.autotable.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>

    <script>
    document.addEventListener('DOMContentLoaded', function () {
        const resultsContainer = document.getElementById('resultsContainer');
        const exportButtons = document.getElementById('exportButtons');
        let tableData = null;
        let resultsAbort = null; // abort stale loads

        const districtSelect = document.getElementById('districtSelect');
        const unitSelect = document.getElementById('unitSelect');
        const testIdSelect = document.getElementById('testIdSelect');
        const schoolSelect = document.getElementById('schoolSelect');
        const teacherSelect = document.getElementById('teacherSelect');
        const loadingIndicator = document.getElementById('loadingIndicator');

        function loadStudentResults() {
            const districtId = districtSelect.value;
            const testId = testIdSelect.value;
            const schoolId = schoolSelect.value;
            const teacherId = teacherSelect.value;

            // Guard: need district, test, and school (teacher optional)
            if (!districtId || !testId || !schoolId) {
                clearResults('Please select a District, Test, and School to view data.');
                return;
            }

            showLoading(true);
            setExportButtons(false);

            // The teacherId is optional. The backend handles an empty string as "all teachers".
            const url = `/CurriculumAlignment/Form1?handler=StudentResults&districtId=${districtId}&testId=${encodeURIComponent(testId)}&schoolId=${schoolId}&teacherId=${encodeURIComponent(teacherId)}`;

            // cancel any in-flight results request
            if (resultsAbort) resultsAbort.abort();
            resultsAbort = new AbortController();

            fetch(url, { signal: resultsAbort.signal })
                .then(response => response.json())
                .then(data => {
                    tableData = data;
                    if (!data || !data.teacherGroups || data.teacherGroups.length === 0) {
                        clearResults('No students found for the current selection.');
                        return;
                    }

                    const colCount = 2 + data.headers.length + 1;
                    let tableHtml = `<div class="table-responsive orenda-table-wrapper"><table class="table orenda-table table-hover" id="resultsTable">`;

                    tableHtml += `<thead><tr>`;
                    tableHtml += `<th>Student Name</th>`;
                    tableHtml += `<th>Student Local ID</th>`;
                    data.headers.forEach(header => {
                        const statement = header.fullStatement.length > 100 ? header.fullStatement.substring(0, 100) + '...' : header.fullStatement;
                        tableHtml += `<th><strong>${header.humanCodingScheme}</strong><small class="text-muted">${statement}</small></th>`;
                    });
                    tableHtml += `<th>Total Passed</th>`;
                    tableHtml += `</tr></thead>`;

                    tableHtml += `<tbody>`;
                    data.teacherGroups.forEach(teacherGroup => {
                        tableHtml += `<tr><td colspan="${colCount}" class="teacher-group-header">${teacherGroup.teacherName}</td></tr>`;
                        teacherGroup.classGroups.forEach(classGroup => {
                            tableHtml += `<tr><td colspan="${colCount}" class="class-group-header">${classGroup.courseTitle}</td></tr>`;
                            classGroup.studentRows.forEach(row => {
                                tableHtml += `<tr>`;
                                tableHtml += `<td>${row.studentName}</td>`;
                                tableHtml += `<td>${row.localStudentId}</td>`;
                                data.headers.forEach(header => {
                                    const score = row.standardScores[header.humanCodingScheme];
                                    const cellContent = (score !== undefined && score !== null) ? score : '';
                                    tableHtml += `<td class="text-center align-middle fw-bold">${cellContent}</td>`;
                                });
                                tableHtml += `<td class="text-center align-middle fw-bold">${row.totalStandardsPassed}</td>`;
                                tableHtml += `</tr>`;
                            });
                        });
                    });
                    tableHtml += `</tbody></table></div>`;

                    resultsContainer.innerHTML = tableHtml;
                    setExportButtons(true);
                })
                .catch(error => {
                    console.error("Error loading student results:", error);
                    clearResults('<p class="text-danger">An error occurred while loading results. Please try again.</p>');
                })
                .finally(() => showLoading(false));
        }

        // --- Export Functions ---
        function getFlatDataForExport() {
            const headers = ['Teacher', 'Class - Period', 'Student Name', 'Local ID', ...tableData.headers.map(h => h.humanCodingScheme), 'Total Passed'];
            const rows = [];
            tableData.teacherGroups.forEach(teacherGroup => {
                teacherGroup.classGroups.forEach(classGroup => {
                    classGroup.studentRows.forEach(row => {
                        const studentRow = [
                            teacherGroup.teacherName,
                            classGroup.courseTitle,
                            row.studentName,
                            row.localStudentId,
                            ...tableData.headers.map(h => (row.standardScores[h.humanCodingScheme] ?? '')),
                            row.totalStandardsPassed
                        ];
                        rows.push(studentRow);
                    });
                });
            });
            return { headers, rows };
        }

        document.getElementById('printBtn').addEventListener('click', () => window.print());

        document.getElementById('pdfBtn').addEventListener('click', () => {
            const { jsPDF } = window.jspdf;
            const doc = new jsPDF({ orientation: 'landscape' });
            const head = [['Student Name', 'Local ID', ...tableData.headers.map(h => h.humanCodingScheme), 'Total Passed']];
            const colCount = head[0].length;

            tableData.teacherGroups.forEach((teacherGroup, index) => {
                const body = [];
                body.push([{ content: teacherGroup.teacherName, colSpan: colCount, styles: { fontStyle: 'bold', fillColor: '#343a40', textColor: '#fff' } }]);

                teacherGroup.classGroups.forEach(classGroup => {
                    body.push([{ content: classGroup.courseTitle, colSpan: colCount, styles: { fontStyle: 'bold', fillColor: '#e9ecef' } }]);
                    classGroup.studentRows.forEach(row => {
                        body.push([
                            row.studentName,
                            row.localStudentId,
                            ...tableData.headers.map(h => (row.standardScores[h.humanCodingScheme] ?? '')),
                            row.totalStandardsPassed
                        ]);
                    });
                });

                doc.autoTable({
                    head: head,
                    body: body,
                    theme: 'grid',
                    startY: (doc.autoTable.previous && doc.autoTable.previous.finalY) ? doc.autoTable.previous.finalY + 10 : undefined
                });

                if (index < tableData.teacherGroups.length - 1) {
                    doc.addPage();
                }
            });

            doc.save('student_results_grouped.pdf');
        });

        document.getElementById('excelBtn').addEventListener('click', () => {
            const { headers, rows } = getFlatDataForExport();
            const data = [headers, ...rows];
            const ws = XLSX.utils.aoa_to_sheet(data);
            const wb = XLSX.utils.book_new();
            XLSX.utils.book_append_sheet(wb, ws, 'Results');
            XLSX.writeFile(wb, 'student_results.xlsx');
        });

        document.getElementById('csvBtn').addEventListener('click', () => {
            const { headers, rows } = getFlatDataForExport();
            const q = v => `"${String(v ?? '').replace(/"/g, '""')}"`;
            const csv = [headers.map(q).join(',')]
                .concat(rows.map(r => r.map(q).join(',')))
                .join('\n');
            const blob = new Blob([csv], { type: 'text/csv;charset=utf-8;' });
            const link = document.createElement('a');
            link.href = URL.createObjectURL(blob);
            link.download = 'student_results.csv';
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
        });

        // --- Helper & Event Listener Functions ---
        function setExportButtons(enabled) {
            exportButtons.classList.toggle('d-none', !enabled);
        }

        function clearResults(message = "Please make a selection to view student data.") {
            resultsContainer.innerHTML = `<p class="text-muted">${message}</p>`;
            tableData = null;
            setExportButtons(false);
        }

        function fetchAndPopulate(url, selectElement, placeholder) {
            showLoading(true);
            return fetch(url)
                .then(response => {
                    if(response.status === 403) {
                        alert("You are not authorized to view this data.");
                        return Promise.reject("Forbidden");
                    }
                    if (!response.ok) throw new Error(`Network response was not ok: ${response.statusText}`);
                    return response.json();
                })
                .then(data => {
                    resetSelect(selectElement, placeholder);
                    data.forEach(item => {
                        selectElement.add(new Option(item.text, item.value));
                    });
                    selectElement.disabled = false;
                })
                .catch(error => console.error("Fetch Error:", error))
                .finally(() => showLoading(false));
        }

        districtSelect.addEventListener('change', function () {
            const districtId = this.value;
            resetSelect(unitSelect, '-- Select Unit --', true);
            resetSelect(testIdSelect, '-- Select Test --', true);
            resetSelect(schoolSelect, '-- Select School --', true);
            resetSelect(teacherSelect, '-- All Teachers --', true);
            clearResults();
            if (districtId) {
                fetchAndPopulate(`/CurriculumAlignment/Form1?handler=Units&districtId=${districtId}`, unitSelect, '-- Select Unit --');
            }
        });

        unitSelect.addEventListener('change', function () {
            const districtId = districtSelect.value;
            const unit = this.value;
            resetSelect(testIdSelect, '-- Select Test --', true);
            resetSelect(schoolSelect, '-- Select School --', true);
            resetSelect(teacherSelect, '-- All Teachers --', true);
            clearResults();
            if (districtId && unit) {
                fetchAndPopulate(`/CurriculumAlignment/Form1?handler=TestNames&districtId=${districtId}&unit=${unit}`, testIdSelect, '-- Select Test --');
            }
        });

        testIdSelect.addEventListener('change', function() {
            const districtId = districtSelect.value;
            const testId = this.value;
            resetSelect(schoolSelect, '-- Select School --', true);
            resetSelect(teacherSelect, '-- All Teachers --', true);
            clearResults("Please select a school to continue.");
            if (districtId && testId) {
                fetchAndPopulate(`/CurriculumAlignment/Form1?handler=Schools&districtId=${districtId}&testId=${encodeURIComponent(testId)}`, schoolSelect, '-- Select School --');
            }
        });

        schoolSelect.addEventListener('change', function() {
            const districtId = districtSelect.value;
            const testId = testIdSelect.value;
            const schoolId = this.value;
            resetSelect(teacherSelect, '-- All Teachers --', true);
            clearResults();
            if (districtId && testId && schoolId) {
                // Fetch teachers, THEN auto-load results for "All Teachers"
                fetchAndPopulate(`/CurriculumAlignment/Form1?handler=Teachers&districtId=${districtId}&testId=${encodeURIComponent(testId)}&schoolId=${schoolId}`, teacherSelect, '-- All Teachers --')
                .then(() => loadStudentResults());
            }
        });

        teacherSelect.addEventListener('change', loadStudentResults);

        function showLoading(show) {
            loadingIndicator.style.display = show ? 'block' : 'none';
            if (show) resultsContainer.innerHTML = '';
        }

        function resetSelect(selectElement, placeholder, disabled = false) {
            selectElement.innerHTML = '';
            selectElement.add(new Option(placeholder, ''));
            selectElement.disabled = disabled;
        }
    });
    </script>
}
