@page
@model ORSV2.Pages.CurriculumAlignment.FormsModel
@{
    ViewData["Title"] = "Select a Form";
}

@await Html.PartialAsync("_Breadcrumbs", Model.Breadcrumbs)

<div class="orenda-container">
    <div class="orenda-header shadow-orenda">
        <h2 class="mb-1">Curriculum Alignment</h2>
        <p class="mb-0">Select a form for @Model.DistrictName</p>
    </div>

    <div class="row g-4 mt-4">
        <div class="col-12 col-md-6 col-lg-4">
            <a href="@Url.Page("/CurriculumAlignment/Form1", new { DistrictId = Model.DistrictId })" class="orenda-card shadow-orenda-hover h-100 text-decoration-none d-flex flex-column">
                <div class="orenda-card-body">
                    <h5 class="text-orenda-primary">Form 1</h5>
                    <p class="text-muted small">Standards analysis view per teacher, class, and student.</p>
                </div>
            </a>
        </div>

        <div class="col-12 col-md-6 col-lg-4">
            <a href="@Url.Page("/CurriculumAlignment/Form2", new { DistrictId = Model.DistrictId })" class="orenda-card shadow-orenda-hover h-100 text-decoration-none d-flex flex-column">
                <div class="orenda-card-body">
                    <h5 class="text-orenda-primary">Form 2</h5>
                    <p class="text-muted small">Quadrant analysis for assessment data based on overall proficiency of standards.</p>
                </div>
            </a>
        </div>

        <div class="col-12 col-md-6 col-lg-4">
            <a href="@Url.Page("/CurriculumAlignment/Form3", new { DistrictId = Model.DistrictId })" class="orenda-card shadow-orenda-hover h-100 text-decoration-none d-flex flex-column">
                <div class="orenda-card-body">
                    <h5 class="text-orenda-primary">Form 3</h5>
                    <p class="text-muted small">School and teacher level summary for a single assessment.</p>
                </div>
            </a>
        </div>

        @if (Model.ShowAdvancedForms)
        {
            <div class="col-12 col-md-6 col-lg-4">
                    <a href="@Url.Page("/CurriculumAlignment/Meta", new { DistrictId = Model.DistrictId })" class="orenda-card shadow-orenda-hover h-100 text-decoration-none d-flex flex-column">
                        <div class="orenda-card-body">
                            <h5 class="text-orenda-primary">Meta</h5>
                            <p class="text-muted small">Meta-analysis across multiple grades, demographic groups, and cycles/units.</p>
                        </div>
                    </a>
            </div>

            <div class="col-12 col-md-6 col-lg-4">
                <div class="orenda-card h-100 is-disabled">
                    <div class="orenda-card-body">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <h5 class="text-orenda-primary mb-0">Mega</h5>
                            <span class="badge bg-light text-dark">Coming Soon</span>
                        </div>
                        <p class="text-muted small">Comprehensive district-wide analysis with predictive insights.</p>
                    </div>
                </div>
            </div>

            <div class="col-12 col-md-6 col-lg-4">
                <div class="orenda-card h-100 is-disabled">
                    <div class="orenda-card-body">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <h5 class="text-orenda-primary mb-0">Giga</h5>
                            <span class="badge bg-light text-dark">Coming Soon</span>
                        </div>
                        <p class="text-muted small">Large-scale data analysis with machine learning capabilities.</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>