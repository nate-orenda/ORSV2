    ViewData["Title"] = "Meta Assessment Data - DRS";
    
    // --- UPDATED HELPER ---
    // This now renders a single <td> with combined data
    Action<ORSV2.Pages.CurriculumAlignment.AggData, string> RenderDemoCells = (demoData, cssClass) =>
    {
        var dataClass = $"data-{cssClass}";
        if (demoData != null && demoData.TotalTested > 0)
        {
            var profClass = demoData.PctProficient >= 75 ? "proficiency-high"
                : demoData.PctProficient >= 50 ? "proficiency-mid"
                : "proficiency-low";
            
            <td class="@dataClass">
                <span class="proficiency-badge @profClass">@demoData.PctProficient%</span>
                <span class="combined-count">(@demoData.TotalProficient / @demoData.TotalTested)</span>
            </td>
        }
        else
        {
            <td class="@dataClass">â€”</td>
        }
    };
}

