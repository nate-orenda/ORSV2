<div class="container-fluid my-4">
    <h2 class="mb-4">
        <i class="fas fa-chart-bar text-primary me-2"></i>
        Meta Assessment Data
    </h2>
    
    <div class="meta-filter-section d-print-none">
        <form method="get" class="row g-3">
            <input type="hidden" asp-for="DistrictId" />
            
            <div class="col-md-6">
                <label asp-for="SchoolId" class="form-label">School</label>
                <select asp-for="SchoolId" asp-items="Model.AvailableSchools" class="form-select">
                </select>
            </div>
            <div class="col-md-6 d-flex align-items-end">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-search me-2"></i>Load Data
                </button>
            </div>
        </form>
    </div>

    @if (Model.UnitGroups.Any())
    {
        <div class="orenda-header shadow-orenda d-print-none">
            <h3 class="mb-0">@Model.SchoolName</h3>
            <p class="mb-0">@Model.DistrictName</p>
        </div>

        <!-- Print Header - Shows on printed reports only -->
        <div class="print-report-header">
            <div class="print-header-district">@Model.DistrictName</div>
            <div class="print-header-school">@Model.SchoolName</div>
        </div>

        <div class="mb-3 d-print-none">
            <button type="button" class="btn btn-action btn-print" onclick="window.print()">
                <i class="fas fa-print"></i>Print Report (Landscape)
            </button>
            <a asp-page-handler="Excel"
               asp-route-DistrictId="@Model.DistrictId"
               asp-route-SchoolId="@Model.SchoolId"
               class="btn btn-action btn-edit" style="background-color: #d4edda; color: #155724; border-color: #155724;">
               <i class="fas fa-file-excel"></i>Download Excel
            </a>
        </div>

        @foreach (var unitGroup in Model.UnitGroups)
        {
            <h3 class="unit-header">Cycle: @unitGroup.UnitName</h3>

            @foreach (var subjectGroup in unitGroup.SubjectGroups)
            {
                <div class="subject-header">Subject: @subjectGroup.SubjectName</div>
                
                <div class="table-responsive">
                    <table class="meta-table">
                        <thead class="sticky-top">
                            <tr>
                                <th rowspan="2" class="col-core">Grade</th>
                                <th class="col-header-all">All Students</th>
                                <th class="col-header-el">EL</th>
                                <th class="col-header-swd">SWD</th>
                                <th class="col-header-aa">AA</th>
                                <th class="col-header-sed">SED</th>
                                <th class="col-header-hisp">Hispanic</th>
                            </tr>
                            <tr>
                                <th class="data-all">% Proficient (Proficient/Tested)</th>
                                <th class="data-el">% Proficient (Proficient/Tested)</th>
                                <th class="data-swd">% Proficient (Proficient/Tested)</th>
                                <th class="data-aa">% Proficient (Proficient/Tested)</th>
                                <th class="data-sed">% Proficient (Proficient/Tested)</th>
                                <th class="data-hisp">% Proficient (Proficient/Tested)</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var row in subjectGroup.BodyRows)
                            {
                                var rowClass = row.Type switch {
                                    ORSV2.Pages.CurriculumAlignment.RowType.K2Total => "sub-total-row",
                                    ORSV2.Pages.CurriculumAlignment.RowType.G3PlusTotal => "sub-total-row",
                                    _ => ""
                                };
                                
                                <tr class="@rowClass">
                                    <td class="col-core">@row.RowLabel</td>
                                    @{ RenderDemoCells(row.All, "all"); }
                                    @{ RenderDemoCells(row.EL, "el"); }
                                    @{ RenderDemoCells(row.SWD, "swd"); }
                                    @{ RenderDemoCells(row.AA, "aa"); }
                                    @{ RenderDemoCells(row.SED, "sed"); }
                                    @{ RenderDemoCells(row.HISP, "hisp"); }
                                </tr>
                            }
                        </tbody>

                        @if (!subjectGroup.SubjectTotalRow.IsEmpty)
                        {
                            <tfoot>
                                <tr class="grand-total-row">
                                    <td class="col-core">@subjectGroup.SubjectTotalRow.RowLabel</td>
                                    @{ RenderDemoCells(subjectGroup.SubjectTotalRow.All, "all"); }
                                    @{ RenderDemoCells(subjectGroup.SubjectTotalRow.EL, "el"); }
                                    @{ RenderDemoCells(subjectGroup.SubjectTotalRow.SWD, "swd"); }
                                    @{ RenderDemoCells(subjectGroup.SubjectTotalRow.AA, "aa"); }
                                    @{ RenderDemoCells(subjectGroup.SubjectTotalRow.SED, "sed"); }
                                    @{ RenderDemoCells(subjectGroup.SubjectTotalRow.HISP, "hisp"); }
                                </tr>
                            </tfoot>
                        }
                    </table>
                </div>
            }
        }
    }
    else if (Model.SchoolId.HasValue)
    {
        <div class="no-data-alert">
            <i class="fas fa-info-circle me-2"></i>
            No meta data available for the selected school or district.
        </div>
    }
    else
    {
         <div class="no-data-alert">
            <i class="fas fa-info-circle me-2"></i>
            Please select a school to load data.
        </div>
    }
</div>
