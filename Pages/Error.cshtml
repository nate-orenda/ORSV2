@page
@model ORSV2.Pages.ErrorModel
@{
    ViewData["Title"] = "We hit a snag";
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<div class="orenda-container">
    <div class="orenda-header shadow-orenda">
        <h2 class="mb-1">Something went wrong</h2>
        <p class="mb-0 text-muted">Please try again. If it keeps happening, contact support.</p>
    </div>

    <div class="orenda-card shadow-orenda">
        <div class="orenda-card-body">
            <p class="mb-2">Sorry—an unexpected error occurred.</p>

            @if (Model.ShowRequestId)
            {
                <p class="small text-muted mb-2">
                    <strong>Request ID:</strong> <code>@Model.RequestId</code>
                </p>
            }

            <div class="mt-3 d-flex gap-2">
                <a class="btn btn-primary" href="javascript:history.back()">Go back</a>
                <a class="btn btn-outline-secondary" asp-page="/Index">Return home</a>
            </div>

            @* Only OrendaAdmin sees the raw details *@
            @if (User.IsInRole("OrendaAdmin") && !string.IsNullOrEmpty(Model.ExceptionMessage))
            {
                <hr />
                <div class="alert alert-warning">
                    <strong>Developer details (visible to OrendaAdmin only)</strong>
                    <div class="small mt-2">
                        <div><strong>Path:</strong> <code>@Model.ExceptionPath</code></div>
                        <div class="mt-2"><strong>Message:</strong><br /><code>@Model.ExceptionMessage</code></div>
                        @if (!string.IsNullOrEmpty(Model.StackTrace))
                        {
                            <div class="mt-2">
                                <strong>Stack Trace:</strong>
                                <pre class="mb-0"><code>@Model.StackTrace</code></pre>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>
