@page
@model ORSV2.Pages.IndexModel
@{
    ViewData["Title"] = "Welcome";
    Layout = "_Layout";
}
<div class="container py-4">

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h4 class="mb-3">Welcome, @Model.UserName</h4>
            <canvas id="enrollmentChart" height="120"></canvas>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <h5 class="mb-3">Accessible Schools</h5>
            @if (User.IsInRole("OrendaAdmin") || User.IsInRole("OrendaManager") || User.IsInRole("OrendaUser"))
            {
                <ul class="list-group list-group-flush">
                    @foreach (var district in Model.DistrictSchools)
                    {
                        <li class="list-group-item">
                            <strong>@district.Key</strong>
                            <ul class="ms-3 mt-1">
                                @foreach (var schoolName in district.Value)
                                {
                                    <li>@schoolName</li>
                                }
                            </ul>
                        </li>
                    }
                </ul>
            }
            else
            {
                <ul class="list-group list-group-flush">
                    @foreach (var school in Model.EnrollmentSummaries)
                    {
                        <li class="list-group-item">@school.Name (@school.Count students)</li>
                    }
                </ul>
            }

        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const ctx = document.getElementById('enrollmentChart').getContext('2d');
        const chart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: [@Html.Raw(Model.ChartLabels)],
                datasets: [{
                    label: 'Enrollment',
                    data: [@Html.Raw(Model.ChartData)],
                    backgroundColor: 'rgba(54, 162, 235, 0.6)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: { display: false }
                },
                scales: {
                    x: {
                        ticks: {
                            autoSkip: false,
                            maxRotation: 0,
                            font: { size: 10 }
                        }
                    },
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>
}
