@page
@model ORSV2.Pages.GuidanceAlignment.ProtocolsModel
@{
    ViewData["Title"] = "GA Protocols";
}
@await Html.PartialAsync("_Breadcrumbs", Model.Breadcrumbs)

<style>
    .protocols-container {
        max-width: 1200px;
        margin: 0 auto;
    }
    
    .protocols-header {
        background: linear-gradient(135deg, #0022C5 0%, #1a4fb8 100%);
        color: white;
        padding: 2rem;
        border-radius: 12px;
        margin-bottom: 2rem;
        box-shadow: 0 4px 20px rgba(0, 34, 197, 0.15);
    }
    
    .protocols-table-wrapper {
        background: white;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
        border: 1px solid #e9ecef;
    }
    
    .protocols-table {
        margin-bottom: 0;
        font-size: 0.95rem;
    }
    
    .protocols-table th {
        background: linear-gradient(135deg, #f8f9fb 0%, #e9ecef 100%);
        color: #495057;
        font-weight: 600;
        padding: 1rem 0.75rem;
        border: none;
        text-transform: uppercase;
        font-size: 0.8rem;
        letter-spacing: 0.5px;
        white-space: nowrap;
    }
    
    .protocols-table td {
        padding: 1rem 0.75rem;
        border: none;
        border-bottom: 1px solid #f1f3f4;
        vertical-align: middle;
    }
    
    .protocols-table tbody tr {
        transition: all 0.2s ease;
    }
    
    .protocols-table tbody tr:hover {
        background-color: #f8f9ff;
        transform: translateY(-1px);
        box-shadow: 0 2px 8px rgba(0, 34, 197, 0.1);
    }
    
    .protocols-table tbody tr:last-child td {
        border-bottom: none;
    }
    
    .school-badge {
        background: linear-gradient(135deg, #0022C5 0%, #1a4fb8 100%);
        color: white;
        padding: 0.4rem 0.8rem;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 500;
        display: inline-block;
        max-width: 100%;
        overflow: visible;
        text-overflow: unset;
        white-space: normal;
        word-wrap: break-word;
    }
    
    .checkpoint-badge {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        color: white;
        padding: 0.3rem 0.7rem;
        border-radius: 15px;
        font-size: 0.8rem;
        font-weight: 600;
        text-align: center;
        min-width: 40px;
        display: inline-block;
    }
    
    .year-badge {
        background: linear-gradient(135deg, #6f42c1 0%, #8e5ec7 100%);
        color: white;
        padding: 0.25rem 0.6rem;
        border-radius: 12px;
        font-size: 0.8rem;
        font-weight: 500;
    }
    
    .date-text {
        color: #6c757d;
        font-size: 0.85rem;
        font-weight: 500;
    }
    
    .finalized-checkbox {
        transform: scale(1.2);
        accent-color: #28a745;
        cursor: not-allowed;
    }
    
    .finalized-cell {
        text-align: center;
        vertical-align: middle;
    }
    
    .action-buttons {
        display: flex;
        gap: 0.5rem;
        align-items: center;
        flex-wrap: nowrap;
    }
    
    .btn-disabled {
        background: #e9ecef !important;
        color: #6c757d !important;
        cursor: not-allowed !important;
        border: 1px solid #dee2e6 !important;
        box-shadow: none !important;
        pointer-events: none; /* prevents clicks */
    }

    
    .create-protocol-btn {
        background: white;
        color: #0022C5;
        border: 2px solid white;
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        font-weight: 600;
        font-size: 0.95rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        transition: all 0.3s ease;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }
    
    .create-protocol-btn:hover {
        background: #f8f9fa;
        color: #001a9f;
        border-color: #f8f9fa;
        transform: translateY(-2px);
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
    }
    
    .no-protocols-card {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        border: 2px dashed #dee2e6;
        border-radius: 12px;
        padding: 3rem 2rem;
        text-align: center;
        color: #6c757d;
    }
    
    .no-protocols-icon {
        font-size: 3rem;
        color: #dee2e6;
        margin-bottom: 1rem;
    }
    
    @@media (max-width: 768px) {
        .protocols-table {
            font-size: 0.85rem;
        }
        
        .protocols-table th,
        .protocols-table td {
            padding: 0.75rem 0.5rem;
        }
        
        .action-buttons {
            flex-direction: column;
            gap: 0.25rem;
        }
        
        .school-badge {
            font-size: 0.8rem;
            padding: 0.3rem 0.6rem;
        }
        
        .protocols-header {
            padding: 1.5rem;
        }
        
        /* Adjust column widths for mobile */
        .protocols-table thead th:nth-child(1) { width: 35% !important; }
        .protocols-table thead th:nth-child(2) { width: 12% !important; }
        .protocols-table thead th:nth-child(3) { width: 12% !important; }
        .protocols-table thead th:nth-child(4) { width: 0% !important; display: none; }
        .protocols-table thead th:nth-child(5) { width: 0% !important; display: none; }
        .protocols-table thead th:nth-child(6) { width: 12% !important; }
        .protocols-table thead th:nth-child(7) { width: 29% !important; }
        
        .protocols-table tbody td:nth-child(4),
        .protocols-table tbody td:nth-child(5) {
            display: none;
        }
    }
</style>

<div class="protocols-container">
    <!-- Header Section -->
    <div class="protocols-header">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2 class="mb-2">
                    <i class="bi bi-clipboard-data me-2"></i>
                    Guidance Alignment Protocols
                </h2>
                <p class="mb-0 opacity-75">
                    Manage and track your guidance alignment protocols across checkpoints
                </p>
            </div>
            <button type="button" class="btn btn-sm" data-bs-toggle="modal" data-bs-target="#createProtocolModal">
                <i class="bi bi-plus-circle me-2"></i>
                Create Protocol
            </button>
        </div>
    </div>

    <!-- Protocols Table -->
    @if (Model.Protocols?.Any() == true)
    {
        <div class="protocols-table-wrapper">
            <table class="table protocols-table">
                <thead>
                    <tr>
                        <th style="width: 25%;">School</th>
                        <th style="width: 12%;">Checkpoint</th>
                        <th style="width: 12%;">Year</th>
                        <th style="width: 15%;">Created</th>
                        <th style="width: 15%;">Updated</th>
                        <th style="width: 21%;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var protocol in Model.Protocols)
                    {
                        <tr>
                            <td>
                                <span class="school-badge" title="@protocol.School?.Name">
                                    @protocol.School?.Name
                                </span>
                            </td>
                            <td>
                                <span class="checkpoint-badge">
                                    CP @protocol.CP
                                </span>
                            </td>
                            <td>
                                <span class="year-badge">
                                    @protocol.SchoolYear
                                </span>
                            </td>
                            <td>
                                <span class="date-text">
                                    @protocol.CreatedAt.ToShortDateString()
                                </span>
                            </td>
                            <td>
                                <span class="date-text">
                                    @(protocol.UpdatedAt?.ToShortDateString() ?? "â€”")
                                </span>
                            </td>
                            <td>
                                <div class="action-buttons">
                                    @if (protocol.IsFinalized)
                                    {
                                        <!-- Edit disabled when finalized -->
                                        <a class="btn-action btn-edit btn-disabled">
                                            <i class="bi bi-pencil-square me-1"></i>
                                            Edit
                                        </a>
                                        <a href="/GuidanceAlignment/ProtocolSections/ClientSidePrint?protocolId=@protocol.Id" 
                                        target="_blank"
                                        class="btn-action btn-print"
                                        title="Print Protocol">
                                            <i class="bi bi-printer me-1"></i>
                                            Print
                                        </a>

                                        <!-- Disabled refresh button when finalized -->
                                        <button class="btn-action btn-disabled ms-2" disabled 
                                                title="Cannot refresh finalized protocol">
                                            <i class="bi bi-arrow-clockwise me-1"></i>
                                            Refresh
                                        </button>

                                        <span class="badge bg-danger ms-2">Finalized</span>

                                        @* Orenda-only unlock *@
                                        @*if (User.IsInRole("OrendaAdmin") || User.IsInRole("OrendaManager") || User.IsInRole("OrendaUser"))
                                        {*@
                                            <form method="post" class="d-inline">
                                                <input type="hidden" name="protocolId" value="@protocol.Id" />
                                                <button formaction="?handler=Unlock" class="btn btn-sm btn-warning ms-2">
                                                    Unlock
                                                </button>
                                                @Html.AntiForgeryToken()
                                            </form>
                                        @*}*@
                                    }
                                    else
                                    {
                                        <!-- Normal edit + print -->
                                        <a asp-page="/GuidanceAlignment/ProtocolSections/Introduction"
                                        asp-route-protocolId="@protocol.Id"
                                        class="btn-action btn-edit">
                                            <i class="bi bi-pencil-square me-1"></i>
                                            Edit
                                        </a>

                                        <a href="/GuidanceAlignment/ProtocolSections/ClientSidePrint?protocolId=@protocol.Id" 
                                        target="_blank"
                                        class="btn-action btn-print"
                                        title="Print Protocol">
                                            <i class="bi bi-printer me-1"></i>
                                            Print
                                        </a>

                                        <!-- Refresh Data Button -->
                                        <form method="post" class="d-inline">
                                            <input type="hidden" name="protocolId" value="@protocol.Id" />
                                            <button formaction="?handler=RefreshProtocolData" 
                                                    class="btn-action btn-refresh ms-2"
                                                    title="Refresh protocol data from latest GAResults"
                                                    onclick="return confirm('Refresh protocol data? This will update all student data from the latest records.');">
                                                <i class="bi bi-arrow-clockwise me-1"></i>
                                                Refresh
                                            </button>
                                            @Html.AntiForgeryToken()
                                        </form>

                                        <span class="badge bg-secondary ms-2">In-Progress</span>

                                        <form method="post" class="d-inline">
                                            <input type="hidden" name="protocolId" value="@protocol.Id" />
                                            <button formaction="?handler=Finalize" class="btn btn-sm btn-primary ms-2">
                                                Finalize
                                            </button>
                                            @Html.AntiForgeryToken()
                                        </form>
                                    }
                                </div>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="no-protocols-card">
            <div class="no-protocols-icon">
                <i class="bi bi-clipboard-x"></i>
            </div>
            <h4 class="mb-3">No Protocols Found</h4>
            <p class="mb-3">Get started by creating your first guidance alignment protocol.</p>
            <button type="button" class="btn btn btn-sm" data-bs-toggle="modal" data-bs-target="#createProtocolModal">
                <i class="bi bi-plus-circle me-2"></i>
                Create Your First Protocol
            </button>
        </div>
    }
</div>

<!-- Create Protocol Modal -->
<div class="modal fade" id="createProtocolModal" tabindex="-1" aria-labelledby="createProtocolLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg">
            <form method="post" asp-page-handler="CreateProtocol">
                <div class="modal-header" style="background: linear-gradient(135deg, #0022C5 0%, #1a4fb8 100%); color: white;">
                    <h5 class="modal-title" id="createProtocolLabel">
                        <i class="bi bi-plus-circle me-2"></i>
                        Create New Protocol
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body p-4">
                    <input type="hidden" name="SchoolId" value="@Model.School?.Id" />
                    <input type="hidden" name="DistrictId" value="@Model.School?.DistrictId" />
                    <input type="hidden" name="SchoolYear" value="@Model.SchoolYear" />

                    <div class="mb-3">
                        <label for="CP" class="form-label fw-semibold">Checkpoint</label>
                        <select name="CP" class="form-select" required>
                            <option value="">Select Checkpoint</option>
                            @if (Model.BuildableCheckpoints?.Any() == true)
                            {
                                @foreach (var item in Model.BuildableCheckpoints)
                                {
                                    <option value="@item.CP">@item.Label</option>
                                }
                            }
                        </select>
                    </div>
                </div>
                <div class="modal-footer bg-light">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                        Cancel
                    </button>
                    <button type="submit" class="btn btn-sm">
                        <i class="bi bi-check-circle me-1"></i>
                        Create Protocol
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>