@model ORSV2.Pages.GuidanceAlignment.ProtocolSections.TrendsModel.IndicatorTableGroup

@if (Model != null && Model.Rows.Any())
{
    <div class="table-responsive">
        <table class="table table-bordered table-sm data-table mb-0">
            <thead class="table-light">
                <tr>
                    <th style="width: 30%;">Indicator</th>
                    @foreach (var grade in Model.Grades)
                    {
                        // Get total enrollment for this grade from any indicator row
                        var totalEnrollment = Model.Rows
                            .Where(r => r.GradeData.ContainsKey(grade) && r.GradeData[grade].IsAvailable)
                            .Select(r => r.GradeData[grade].TotalCount)
                            .FirstOrDefault();
                        
                        <th class="text-center" style="min-width: 100px;">
                            <div class="fw-bold">Grade @grade</div>
                            @if (totalEnrollment > 0)
                            {
                                <small class="text-muted">(@totalEnrollment students)</small>
                            }
                            <div><small class="text-muted">% Met | Count</small></div>
                        </th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var row in Model.Rows)
                {
                    <tr>
                        <td class="fw-semibold align-middle">
                            <span class="badge bg-light text-dark">@row.IndicatorName</span>
                        </td>
                        @foreach (var grade in Model.Grades)
                        {
                            @if (row.GradeData.TryGetValue(grade, out var metrics))
                            {
                                @if (metrics.IsAvailable)
                                {
                                    <td class="text-center align-middle">
                                        @if (metrics.TotalCount > 0)
                                        {
                                            <div class="fw-bold text-primary fs-6">@metrics.PercentMet.ToString("F1")%</div>
                                            <small class="text-muted">@metrics.CountMet / @metrics.TotalCount</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">No Students</span>
                                        }
                                    </td>
                                }
                                else
                                {
                                    <td class="text-center table-secondary align-middle">
                                        <span class="text-muted">N/A</span>
                                    </td>
                                }
                            }
                            else
                            {
                                <td class="text-center align-middle">
                                    <span class="text-muted">No Data</span>
                                </td>
                            }
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info mb-0">
        <i class="bi bi-info-circle"></i>
        No data available for this demographic group at the current checkpoint.
    </div>
}