@page "{handler?}"
@model ORSV2.Pages.GuidanceAlignment.ProtocolSections.DemographicsModel
@{
    ViewData["Title"] = "Demographics";
    Layout = "~/Pages/Shared/_ProtocolLayout.cshtml";
}

<h4 class="mb-3">Demographics</h4>

@if (Model.DemographicRows?.Any() == true)
{
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Demographics - Above the Line Performance</h5>
            <small>Percentage of students in Challenge or Benchmark quadrants by demographic group</small>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-light">
                        <tr>
                            <th rowspan="2" class="align-middle">Grade</th>
                            <th colspan="2" class="text-center border-end">English Learners</th>
                            <th colspan="2" class="text-center border-end">RFEP</th>
                            <th colspan="2" class="text-center border-end">Black or African American</th>
                            <th colspan="2" class="text-center">Special Education</th>
                        </tr>
                        <tr>
                            <th class="text-center">% Above Line</th>
                            <th class="text-center border-end">Count</th>
                            <th class="text-center">% Above Line</th>
                            <th class="text-center border-end">Count</th>
                            <th class="text-center">% Above Line</th>
                            <th class="text-center border-end">Count</th>
                            <th class="text-center">% Above Line</th>
                            <th class="text-center">Count</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var row in Model.DemographicRows)
                        {
                            <tr>
                                <td class="fw-bold">@row.GradeLabel</td>
                                
                                <!-- English Learners -->
                                <td class="text-center @GetPerformanceClass(row.EnglishLearnersPct)">
                                    @if (row.EnglishLearnersCount > 0)
                                    {
                                        <text>@row.EnglishLearnersPct.ToString("0.0")%</text>
                                    }
                                    else
                                    {
                                        <span class="text-muted">--</span>
                                    }
                                </td>
                                <td class="text-center border-end">
                                    @if (row.EnglishLearnersCount > 0)
                                    {
                                        <text>(@row.EnglishLearnersAboveLineCount/@row.EnglishLearnersCount)</text>
                                    }
                                    else
                                    {
                                        <span class="text-muted">--</span>
                                    }
                                </td>
                                
                                <!-- RFEP -->
                                <td class="text-center @GetPerformanceClass(row.RFEPPct)">
                                    @if (row.RFEPCount > 0)
                                    {
                                        <text>@row.RFEPPct.ToString("0.0")%</text>
                                    }
                                    else
                                    {
                                        <span class="text-muted">--</span>
                                    }
                                </td>
                                <td class="text-center border-end">
                                    @if (row.RFEPCount > 0)
                                    {
                                        <text>(@row.RFEPAboveLineCount/@row.RFEPCount)</text>
                                    }
                                    else
                                    {
                                        <span class="text-muted">--</span>
                                    }
                                </td>
                                
                                <!-- Black or African American -->
                                <td class="text-center @GetPerformanceClass(row.BlackAfricanAmericanPct)">
                                    @if (row.BlackAfricanAmericanCount > 0)
                                    {
                                        <text>@row.BlackAfricanAmericanPct.ToString("0.0")%</text>
                                    }
                                    else
                                    {
                                        <span class="text-muted">--</span>
                                    }
                                </td>
                                <td class="text-center border-end">
                                    @if (row.BlackAfricanAmericanCount > 0)
                                    {
                                        <text>(@row.BlackAfricanAmericanAboveLineCount/@row.BlackAfricanAmericanCount)</text>
                                    }
                                    else
                                    {
                                        <span class="text-muted">--</span>
                                    }
                                </td>
                                
                                <!-- Special Education -->
                                <td class="text-center @GetPerformanceClass(row.SpecialEducationPct)">
                                    @if (row.SpecialEducationCount > 0)
                                    {
                                        <text>@row.SpecialEducationPct.ToString("0.0")%</text>
                                    }
                                    else
                                    {
                                        <span class="text-muted">--</span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (row.SpecialEducationCount > 0)
                                    {
                                        <text>(@row.SpecialEducationAboveLineCount/@row.SpecialEducationCount)</text>
                                    }
                                    else
                                    {
                                        <span class="text-muted">--</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            
            <div class="mt-3">
                <small class="text-muted">
                    <strong>Note:</strong> Percentages represent the proportion of students in each demographic group 
                    who are performing "Above the Line" (Challenge or Benchmark quadrants). 
                    "--" indicates no students in that demographic group for the grade level.
                </small>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> 
        No demographic data available for this checkpoint. Data will appear once student results are processed.
    </div>
}

<h5 class="mt-4">Reflection / Notes</h5>
<form method="post" asp-page-handler="SaveResponse" asp-route-protocolId="@Model.ProtocolId">
    <div class="mb-3">
        <label class="form-label">Demographics Analysis and Reflection</label>
        <textarea asp-for="DemographicsResponse" class="form-control" rows="8" 
                  placeholder="Enter your demographics analysis and reflection here...

Consider questions such as:
• What patterns do you notice in performance across demographic groups?
• Which groups are performing above/below expectations?
• What factors might be contributing to these patterns?
• What interventions or supports might be needed?
• How do these results compare to previous checkpoints or school goals?"></textarea>
    </div>
    
    <button type="submit" class="btn btn-primary">Save Response</button>
</form>

@if (!string.IsNullOrWhiteSpace(Model.LastUpdated))
{
    <div class="mt-3 text-muted small">
        <i class="bi bi-clock"></i> Last updated: @Model.LastUpdated by @Model.LastUpdatedBy
    </div>
}

@functions {
    string GetPerformanceClass(decimal percentage)
    {
        if (percentage == 0) return "text-muted";
        if (percentage >= 70) return "text-success fw-bold";
        if (percentage >= 50) return "text-warning fw-bold";
        return "text-danger fw-bold";
    }
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}