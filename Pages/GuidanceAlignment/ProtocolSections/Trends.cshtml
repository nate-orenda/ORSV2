                                        }
                                        @if (Model.PredictiveGrades9_10.QuadrantCounts.ContainsKey("Benchmark"))
                                        {
                                            <span class="badge bg-success me-1">Benchmark: @Model.PredictiveGrades9_10.QuadrantCounts["Benchmark"]</span>
                                        }
                                        @if (Model.PredictiveGrades9_10.QuadrantCounts.ContainsKey("Strategic"))
                                        {
                                            <span class="badge bg-warning text-dark me-1">Strategic: @Model.PredictiveGrades9_10.QuadrantCounts["Strategic"]</span>
                                        }
                                        @if (Model.PredictiveGrades9_10.QuadrantCounts.ContainsKey("Intensive"))
                                        {
                                            <span class="badge bg-danger me-1">Intensive: @Model.PredictiveGrades9_10.QuadrantCounts["Intensive"]</span>
                                        }
                                    </div>
                                }
                                @await Html.PartialAsync("_TrendDataTable", Model.PredictiveGrades9_10)
                            </div>
                        </div>
