@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
    Layout = null; // Remove layout to avoid conflicts
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ORSV2</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet" />
    <link rel="icon" type="image/x-icon" href="~/favicon.ico"> 
</head>
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }
    
    html, body {
        height: 100%;
        overflow: hidden; /* Prevent scroll during load */
    }
    /* Fix the scroll issue by removing conflicting height settings */
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f8f9fa;
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
        overflow-y: auto; /* Allow scroll only if absolutely needed */
    }
    

    
    .login-wrapper {
        width: 100%;
        max-width: 400px; /* Back to your original width */
        min-height: auto; /* Remove min-height conflicts */
    }
    
    .login-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
        border: 1px solid #e9ecef;
        overflow: hidden;
        animation: fadeInUp 0.6s ease-out;
    }
    
    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    .login-header {
        text-align: center;
        padding: 2rem 2rem 1.5rem 2rem; /* Reduced padding like Google */
        background: white;
        /* Remove the border-bottom line */
    }
    
    .logo {
        height: 64px;
        margin-bottom: 1rem;
        max-width: 100%;
    }
    
    .welcome-text {
        color: #495057;
        font-size: 1rem;
        margin: 0;
        font-weight: 400;
    }
    
    .login-form {
        padding: 2rem; /* Reduced to Google-like spacing */
    }
    
    .form-floating {
        margin-bottom: 1.25rem; /* Reduced spacing like Google */
        position: relative;
    }
    
    .form-floating .form-control {
        border: 2px solid #e9ecef;
        border-radius: 8px; /* Slightly less rounded like Google */
        padding: 1rem 1.25rem; /* Reduced padding */
        height: auto;
        font-size: 1rem; /* Standard font size */
        transition: all 0.3s ease;
        background: #fafbfc;
    }
    
    .form-floating .form-control:focus {
        border-color: #0022C5;
        box-shadow: 0 0 0 0.2rem rgba(0, 34, 197, 0.15);
        background: white;
        transform: translateY(-1px);
    }
    
    .form-floating .form-control:not(:placeholder-shown) {
        background: white;
    }
    
    .form-floating label {
        color: #6c757d;
        font-weight: 500;
        padding: 1rem 1.25rem; /* Match the input padding */
    }
    
    .form-check {
        margin: 1.5rem 0;
    }
    
    .form-check-input:checked {
        background-color: #0022C5;
        border-color: #0022C5;
    }
    
    .form-check-input:focus {
        box-shadow: 0 0 0 0.25rem rgba(0, 34, 197, 0.15);
    }
    
    .form-check-label {
        color: #495057;
        font-weight: 400;
        cursor: pointer;
    }
    
    .login-btn {
        background: linear-gradient(135deg, #0022C5 0%, #1a4fb8 100%);
        border: none;
        border-radius: 8px; /* Match the input border radius */
        padding: 0.875rem 2rem; /* Slightly reduced padding */
        font-size: 1rem;
        font-weight: 600;
        width: 100%;
        color: white;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }
    
    .login-btn::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
        transition: left 0.5s;
    }
    
    .login-btn:hover::before {
        left: 100%;
    }
    
    .login-btn:hover {
        background: linear-gradient(135deg, #001aa0 0%, #1640a0 100%);
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(0, 34, 197, 0.3);
    }
    
    .login-btn:active {
        transform: translateY(0);
    }
    
    .divider {
        text-align: center;
        margin: 1.5rem 0;
        color: #6c757d;
        font-size: 0.9rem;
    }
    
    .google-btn {
        background: white;
        border: 2px solid #e9ecef;
        border-radius: 10px;
        padding: 1rem;
        width: 100%;
        color: #495057;
        font-weight: 500;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
        margin-bottom: 1rem;
    }
    
    .google-btn:hover {
        background: #f8f9fa;
        border-color: #0022C5;
        color: #0022C5;
        transform: translateY(-1px);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }
    
    .google-logo {
        width: 18px;
        height: 18px;
        margin-right: 0.75rem;
    }
    
    .forgot-password {
        text-align: center;
        margin-top: 1.5rem;
    }
    
    .register-section {
        text-align: center;
        margin-top: 1.5rem;
        /* Remove the border-top line */
    }
    
    .register-text {
        color: #6c757d;
        font-size: 0.9rem;
        margin-bottom: 0.5rem; /* Reduced margin for link style */
    }
    
    .validation-summary {
        background: #f8d7da;
        border: 1px solid #f5c6cb;
        border-radius: 8px;
        padding: 1rem;
        margin-bottom: 1.5rem;
        color: #721c24;
    }
    
    .text-danger {
        color: #dc3545 !important;
        font-size: 0.875rem;
        margin-top: 0.25rem;
    }
    
    /* Loading state */
    .btn-loading {
        position: relative;
        color: transparent !important;
    }
    
    .btn-loading::after {
        content: '';
        position: absolute;
        width: 16px;
        height: 16px;
        top: 50%;
        left: 50%;
        margin-left: -8px;
        margin-top: -8px;
        border-radius: 50%;
        border: 2px solid transparent;
        border-top-color: #ffffff;
        animation: spin 1s ease-in-out infinite;
    }
    
    @@keyframes spin {
        to { transform: rotate(360deg); }
    }
    
    /* Responsive Design */
    @@media (max-width: 480px) {
        body {
            padding: 10px;
        }
        
        .login-card {
            border-radius: 12px;
        }
        
        .login-header {
            padding: 1.5rem 1.5rem 1rem 1.5rem;
        }
        
        .login-form {
            padding: 1.5rem;
        }
        
        .logo {
            height: 56px;
        }
    }
    

</style>
<body>
<div class="page-container">
    <div class="login-wrapper">
    <div class="login-card">
        <div class="login-header">
            <img src="~/images/orenda-login.png" alt="Orenda Logo" class="logo" />
            <p class="welcome-text">Sign in to continue</p>
        </div>

        <div class="login-form">
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="validation-summary" role="alert"></div>

                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" required />
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" placeholder="password" required />
                    <label asp-for="Input.Password">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-check">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label class="form-check-label" asp-for="Input.RememberMe">
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>

                <button type="submit" class="login-btn" id="loginButton">
                    Log in
                </button>
            </form>

            @if ((Model.ExternalLogins?.Count ?? 0) > 0)
            {
                <div class="divider">
                    or
                </div>
                
                <form asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    @foreach (var provider in Model.ExternalLogins!)
                    {
                        <button type="submit" class="google-btn" name="provider" value="@provider.Name" title="Log in using @provider.DisplayName">
                            <img src="https://developers.google.com/identity/images/g-logo.png" alt="Google" class="google-logo" />
                            Sign in with @provider.DisplayName
                        </button>
                    }
                </form>
            }

            <div class="forgot-password">
                <a asp-page="./ForgotPassword" class="orenda-link">Forgot your password?</a>
            </div>

            <div class="register-section">
                <p class="register-text">Don't have an account? <a asp-page="./Register" class="orenda-link">Create Account</a></p>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const form = document.getElementById('account');
        const loginButton = document.getElementById('loginButton');
        
        // Add loading state to login button
        form.addEventListener('submit', function() {
            loginButton.classList.add('btn-loading');
            loginButton.disabled = true;
        });
        
        // Prevent double submission
        let formSubmitted = false;
        form.addEventListener('submit', function(e) {
            if (formSubmitted) {
                e.preventDefault();
                return false;
            }
            formSubmitted = true;
        });
        
        // Auto-hide validation messages after 5 seconds
        const validationSummary = document.querySelector('.validation-summary');
        if (validationSummary) {
            setTimeout(() => {
                validationSummary.style.opacity = '0';
                validationSummary.style.transition = 'opacity 0.5s ease';
                setTimeout(() => {
                    validationSummary.style.display = 'none';
                }, 500);
            }, 5000);
        }
    });
</script>
</body>
</html>