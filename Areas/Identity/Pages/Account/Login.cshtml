@page
@model ORSV2.Areas.Identity.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Orenda Reporting System";
}

<style>
    /* Orenda Login Page Styles */
    .auth-wrapper {
        max-width: 650px;
        margin: 4rem auto;
        padding: 0 1rem;
    }
    
    .logo-container {
        text-align: center;
        margin-bottom: 2.5rem;
    }
    
    .orenda-logo {
        height: 60px;
        width: 60px;
        max-width: 100%;
        margin-bottom: .75rem;
    }
    
    .brand-title {
        font-weight: 700;
        font-size: 1.75rem;
        letter-spacing: .3px;
        margin-bottom: .5rem;
        color: #0022C5;
        text-align: center;
    }
    
    .brand-subtitle {
        color: #64748b;
        margin-bottom: 2.5rem;
        text-align: center;
        font-size: 1.1rem;
    }
    
    .auth-card {
        border: 1px solid #e2e8f0;
        border-radius: 12px;
        padding: 2rem;
        background: #fff;
        box-shadow: 0 2px 12px rgba(0, 34, 197, .08);
        transition: all .3s ease;
    }
    
    .auth-card:hover {
        box-shadow: 0 8px 25px rgba(0, 34, 197, .1);
    }
    
    /* Google Sign-In Card */
    .google-cta {
        text-align: center;
    }
    
    .google-cta h2 {
        font-size: 1.25rem;
        font-weight: 600;
        color: #1e293b;
        margin-bottom: 1rem;
    }
    
    .google-cta p {
        color: #64748b;
        margin-bottom: 1.75rem;
        font-size: .95rem;
        line-height: 1.6;
    }
    
    .google-cta .btn-google {
        padding: 1rem 2rem;
        font-size: 1.1rem;
        font-weight: 600;
        width: 100%;
        background: linear-gradient(135deg, #0022C5 0%, #1a4fb8 100%);
        color: #fff !important;
        border: none;
        border-radius: .5rem;
        box-shadow: 0 4px 12px rgba(0, 34, 197, .15);
        transition: all .2s ease;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: .75rem;
    }
    
    .google-cta .btn-google:hover {
        background: linear-gradient(135deg, #001aa0 0%, #1640a0 100%);
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(0, 34, 197, .25);
    }
    
    .google-cta .btn-google:active {
        transform: translateY(0);
    }
    
    /* Google Icon - SVG for white background */
    .google-icon {
        width: 20px;
        height: 20px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }
    
    /* Divider */
    .auth-divider {
        margin: 2rem 0 1.5rem 0;
        text-align: center;
        position: relative;
    }
    
    .auth-divider::before {
        content: '';
        position: absolute;
        top: 50%;
        left: 0;
        right: 0;
        height: 1px;
        background: #e2e8f0;
    }
    
    .auth-divider span {
        background: #fff;
        padding: 0 1rem;
        position: relative;
        color: #94a3b8;
        font-size: .875rem;
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: .5px;
    }
    
    /* Manual Sign-In Accordion */
    details.auth-accordion {
        border: 1px solid #e2e8f0;
        border-radius: .5rem;
        overflow: hidden;
    }
    
    details.auth-accordion summary {
        list-style: none;
        cursor: pointer;
        font-weight: 500;
        margin: 0;
        padding: .875rem 1.25rem;
        background: #f8fafc;
        user-select: none;
        color: #64748b;
        font-size: .95rem;
        transition: all .2s ease;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }
    
    details.auth-accordion summary:hover {
        background: #eef2ff;
        color: #0022C5;
    }
    
    details.auth-accordion summary::after {
        content: '▼';
        font-size: .75rem;
        transition: transform .2s ease;
        color: #94a3b8;
    }
    
    details.auth-accordion[open] summary::after {
        transform: rotate(-180deg);
    }
    
    details.auth-accordion .accordion-body {
        padding: 1.5rem 1.25rem;
        background: #fff;
        border-top: 1px solid #e2e8f0;
    }
    
    /* Form Elements */
    .accordion-body .form-label {
        font-weight: 500;
        color: #1e293b;
        margin-bottom: .5rem;
    }
    
    .accordion-body .form-control {
        border-radius: .5rem;
        border: 1px solid #e2e8f0;
        padding: .625rem .875rem;
        font-size: .95rem;
    }
    
    .accordion-body .form-control:focus {
        border-color: #0022C5;
        box-shadow: 0 0 0 .2rem rgba(0, 34, 197, .1);
    }
    
    .accordion-body .btn-outline-primary {
        border: 2px solid #0022C5;
        color: #0022C5;
        font-weight: 600;
        padding: .625rem 1rem;
        border-radius: .5rem;
        transition: all .2s ease;
    }
    
    .accordion-body .btn-outline-primary:hover {
        background: #0022C5;
        color: #fff;
        transform: translateY(-1px);
    }
    
    /* Footer Links */
    .auth-footer {
        margin-top: 2rem;
        padding-top: 1.5rem;
        border-top: 1px solid #e2e8f0;
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
        gap: 1rem;
        font-size: .95rem;
    }
    
    .auth-footer a {
        color: #64748b;
        text-decoration: none;
        transition: color .2s ease;
        font-weight: 500;
    }
    
    .auth-footer a:hover {
        color: #0022C5;
    }
    
    /* Responsive */
    @@media (max-width: 768px) {
        .auth-wrapper {
            margin: 2rem auto;
        }
        
        .orenda-logo {
            height: 50px;
            width: 50px;
        }
        
        .brand-title {
            font-size: 1.5rem;
        }
        
        .auth-card {
            padding: 1.5rem;
        }
        
        .google-cta .btn-google {
            font-size: 1rem;
            padding: .875rem 1.5rem;
        }
    }
</style>

<div class="auth-wrapper">
    <!-- Logo -->
    <div class="logo-container">
        <img src="~/images/orenda-logo-no-words.png" alt="Orenda Logo" class="orenda-logo" />
        <h1 class="brand-title">Orenda Reporting System</h1>
    </div>
    
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

    <!-- GOOGLE SIGN-IN (Primary Path) -->
    <div class="auth-card google-cta mb-3">
        <h2>Sign in with Google</h2>
        <p>
            Use your school district Google account for quick and secure access. 
            This is the recommended sign-in method for all users.
        </p>

        @if ((Model.ExternalLogins?.Any()) == true)
        {
            var google = Model.ExternalLogins.FirstOrDefault(x => x.Name == "Google");
            if (google != null)
            {
                <form asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <button type="submit" class="btn-google" name="provider" value="@google.Name">
                        <svg class="google-icon" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
                            <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
                            <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
                            <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
                        </svg>
                        <span>Continue with Google</span>
                    </button>
                </form>
            }
            else
            {
                <div class="alert alert-warning mb-0">
                    Google sign-in is temporarily unavailable. Please use the manual sign-in below or contact support.
                </div>
            }
        }
        else
        {
            <div class="alert alert-warning mb-0">
                External logins are not configured. Please use the manual sign-in below or contact support.
            </div>
        }
    </div>

    <!-- DIVIDER -->
    <div class="auth-divider">
        <span>Or</span>
    </div>

    <!-- MANUAL SIGN-IN (Secondary Path) -->
    <details class="auth-accordion">
        <summary>Sign in with email and password</summary>
        <div class="accordion-body">
            <form id="account" method="post" novalidate>
                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="mb-3 form-check">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label class="form-check-label" asp-for="Input.RememberMe">Remember me</label>
                </div>

                <button id="login-submit" type="submit" class="btn-outline-primary w-100">
                    Sign in
                </button>
            </form>
        </div>
    </details>

    <!-- FOOTER LINKS -->
    <div class="auth-footer">
        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Create an account</a>
        <a asp-page="./ForgotPassword">Forgot your password?</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
